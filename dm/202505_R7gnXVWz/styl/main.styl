    .titleTxt
      font-size: 2.4rem
      font-weight: 600
      line-height: 1.4
      margin: 0 auto 32px
      +sp()
        font-size: 1.8rem
        margin: 0 auto 24px
    .captionTxt
      font-size: 1.8rem
      line-height: 1.6
      &.-small
        font-size: 1.4rem
        line-height: 1.5
      +sp()
        font-size: 1.4rem
    .descTxt
      font-size: 1.8rem
      line-height: 1.6
