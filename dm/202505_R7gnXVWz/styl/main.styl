      display: inline-block
      transform: translateX(200%) translateY(-4%) rotate(45deg)
  
  .-bold
    font-weight: 600

  // Anchor
  #Coupon
    +pc()
      padding-top: 85px
      margin-top: -85px
    +sp()
      padding-top: 114px
      margin-top: -114px
  #Shoplist
    +pc()
      padding-top: 145px
      margin-top: -145px
    +sp()
      padding-top: 174px
      margin-top: -174px

  // scroll to search
  #scroll-to-search
    opacity: 0
    position: fixed
    bottom: 30px
    right: 70px
    z-index: 199
    background-color: #3F9DD4
    width: 76px
    height: 76px
    border-radius: 44px
    padding: 6px
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25)
    transition: background-color .1s linear, opacity 0.1s ease-in-out; /* トランジション */
    &.show
      opacity: 1
    +pc()
      &:hover
        background-color: #2885BB
      &:active
        background-color: #186B9B
    +sp()
      width: 60px
      height: 60px
      right: 16px
      bottom: 16px
      &:active
        background-color: #2885BB
    .shopsearch__button
      background-color: transparent
      border: dashed 1px #2075A6
      width: 76px
      height: 76px
      border-radius: 38px
      color: white
      font-size: 1.5rem
      font-weight: 700
      line-height: 1.15
      +sp()
        width: 60px
        height: 60px
        font-size: 1.1rem

  // common
  .transition
    position: relative
    width: 100%
    height: 60px
    &.white
      background-color: white
      .stitch
        width: 100%
        height: 5px
        border-bottom: 1px dashed #EB7AAB
        +sp()
          height: 3px
      .couponShape
        position: absolute
        left: 0
        right: 0
        top: 0
        margin: 0 auto
        background-image: url(../img/transition_white_PC.png)
        width: 72px
        height: 60px
        z-index: 10
        +sp()
          background-image: url(../img/transition_white_SP.png)
          width: 48px
          height: 40px
    &.gray
      background-color: #f7f7f7
      .stitch
        width: 100%
        height: 5px
        border-bottom: 1px dashed #EB7AAB
        +sp()
          height: 3px
      .couponShape
        position: absolute
        left: 0
        right: 0
        top: 0
        margin: 0 auto
        background-image: url(../img/transition_gray_PC.png)
        width: 72px
        height: 60px
        z-index: 10
        +sp()
          background-image: url(../img/transition_gray_SP.png)
          width: 48px
          height: 40px


  // main
  .main
    margin: 0 auto
    &.-info
      margin-bottom: 60px
      +sp()
        margin-bottom: 40px
    .main__title
      display: block
      width:pcWidth
      margin: 0 auto
      line-height:1
      font-size:1.4rem
      text-align: center
      +sp()
        width:100%
        margin: 0 auto
      &Img
        width:100%
    .main__terms
      text-align: center
      margin: 0 auto
      box-sizing: border-box
      background: grayBgColor
      +pc()
        width:pcWidth
        padding: 10px 40px
      +sp()
        padding: 10px
      .main__termsBox
        width: 100% //IE対応
        .main__termsTxt
          line-height 1.5
          color:grayTxtColor
          +pc()
            font-size: 1.6rem
          +sp()
            font-size: 1.2rem
          &.-small
            +pc()
              display: inline-block
              font-size: 1.4rem
            +sp()
              display: inline
              font-size: 1.2rem
        .main__termsLink
          color:secondColor
          text-decoration: underline
          &:hover
            text-decoration: none
        .main__termsList__wrap
          display: grid
          justify-content: center
          .main__termsList
            font-weight: bold
            line-height: 1.5
            +pc()
              font-size: 1.8rem
            +sp()
              font-size: 1.4rem
    .main__info
      text-align: center
      margin: 0 auto
      box-sizing: border-box
      +pc()
        width:pcWidth
        padding: 16px 40px
      +sp()
        padding: 10px
      .main__infoBox
        width: 100% //IE対応
        .main__infoTxt
          line-height 1.5
          color: grayTxtColor
          +pc()
            font-size: 1.4rem
          +sp()
            font-size: 1rem
          .main__infoLink
            color:secondColor
            text-decoration: underline
            &:hover
              text-decoration: none

  
  // ナビゲーション
  .nav__container
    display: flex
    position: sticky
    z-index: 100
    top: 0
    justify-content: center
    width: 100%
    background: #fff
    +pc()
      flex-wrap: nowrap
      margin: 0 auto
    +sp()
      flex-wrap: wrap
      border-bottom: solid 1px #d1d1d1
    .nav__list
      box-sizing: border-box
      width: 174px
      padding: 10px 0
      border-bottom: solid 1px #d1d1d1
      +sp()
        width: 25%
        &.-bottom
          border-bottom: none
      .nav__link
        position: relative
        display: inline-block
        width: 100%
        color: grayTxtColor
        font-weight: bold
        text-align: center
        line-height: 1.5
        box-sizing: border-box
        border-left: solid 1px #d1d1d1
        &:hover
          opacity: .8
          transition-duration: .15s
        &.-last
            border-right: solid 1px #d1d1d1
        +pc()
          padding: 14px 16px 20px
          font-size: 2rem
        +sp()
          font-size: 1.2rem
          padding: 8px 8px 10px
          &.-first
            border-left: 0
        &::before
          content: ""
          position: absolute
          left: 50%
          border-top: solid 1px grayTxtColor
          border-right: solid 1px grayTxtColor
          transform: translateX(-50%) rotate(135deg)
          +pc()
            bottom: 5px
            width: 10px
            height: 10px
          +sp()
            bottom: -1px
            width: 8px
            height: 8px
        &:hover,
        &:hover::before
          +pc()
            cursor: pointer
            opacity: .8
        .nav__text--sub
          +pc()
            font-size: 1.4rem
            line-height: 1.4
            font-weight: normal

  //- ラ・クーポン
  .coupon
    width:100%
    // text-align: center

    // 事前
    .couponAdd
      +pc()
        margin-bottom:60px
        //
        display: flex
        flex-direction: column
        justify-content: center
      +sp()
        padding 0 10px 40px
        box-sizing: border-box

      // ボタンセット(bgColor,txtColor)
      btnSet(Colors.CrimsonRed.color,#fff)

      .coupon__terms
        +pc()
          display: flex
          flex-direction: column
          //
          width: auto
          height:auto
          margin: 16px auto
          &:last-of-type
            margin: 0 auto
        +sp()
          margin: 0 auto
        .coupon__termsTxt
          font-size: 1.4rem
          line-height 1.5
          color:grayTxtColor
          +sp()
            font-size: 1.2rem
          .coupon__termsLink
            color:secondColor

    // 獲得
    .couponGet

      // 非遷移クーポン
      // couponOneClickSet(couponWidth,couponColor)
      @import passStr + '_common/stylus/Module/Common/_couponOneClick'
      couponOneClickSet(couponWidth,white)

      //- coupon override
      .couponOneClickSetWrap
        background-color: unset
      .couponOneClickSetSummary
        display: none
      .couponBox
        padding: 24px
        background-color: #F7F7F7
        border-radius: 8px
        +pc()
          &:nth-of-type(2n)
            margin-left: 24px!important
        +sp()
          width: 100%!important
          max-width: 475px
          &:nth-of-type(n+2)
            margin-top: 16px!important
          &:nth-of-type(2n)
            margin-left: 0px!important
      //- shadow
      .couponBoxUpper
        border-radius: 8px
        box-shadow: 0px 0px 5px 1px rgba(0, 0, 0, 0.1)
      .couponOneClick-default
        &::before
          background: rgba(0, 0, 0, 0.1)!important
        &::after
          background: rgba(0, 0, 0, 0.1)!important
      //- SP Coupon Text
      .couponDetailBottomRTitle
        color: grayTxtColor
        +sp()
          font-size: 1.6rem!important
      .couponDetailBottomRPrice
        +sp()
          font-size: 2.4rem
          &.-num
            font-size: 4.2rem!important
      .couponComponent
        border: none!important
      .couponDetail
        color: #E64387!important
      .couponStatus
        background-color: #E64387!important
      .couponDetailBottomRPrice
        br.-sp
          display: none
        

  //- shopsearch
  #Shopsearch
    background-color: #f7f7f7
    +pc()
      padding-bottom: 60px
    +sp()
      padding-bottom: 40px
    .shopsearch__box
      width: 950px
      margin: 0 auto 32px
      display: flex
      flex-wrap: wrap
      justify-content: center
      gap: 6px
      +sp()
        width: calc(100% - 20px)
        justify-content: center
      .shopsearch__area
        position: relative
        width: 22%
        border-radius: 8px
        padding: 16px 12px
        font-size: 1.6rem
        font-weight: 700
        line-height: 1.5
        color: white
        background-color: #3F9DD4
        text-align: center
        +sp()
          width: 41%
        &::before
          content: ""
          position: absolute
          top: 22px
          right: 12px
          border-top: solid 1px white
          border-right: solid 1px white
          transform: translateX(-50%) rotate(45deg)
          +pc()
            bottom: 5px
            width: 10px
            height: 10px
          +sp()
            bottom: 5px
            width: 8px
            height: 8px
        &:hover,
        &:hover::before
          +pc()
            cursor: pointer
            opacity: .8

    //- catalog
    .catalog__search
      display: flex
      flex-wrap: wrap
      position: relative
      width: 864px
      margin: 0 auto
      padding: 24px 40px
      background: #fff
      border-radius: 8px
      +sp()
        width: calc(100% - 32px)
        padding: 0
      .catalog__search__list
        width: 160px
        margin: 0 16px 16px 0
        +pc()
          &:nth-of-type(5),
          &:nth-of-type(10)
            margin: 0 0 16px 0
          &:nth-of-type(n+11)
            margin: 0 16px 0 0
        +sp()
          width: calc((100% - 24px) / 2)
          margin: 8px 8px 0 8px
          &:nth-child(even)
            margin: 8px 0 0 0
          &:last-of-type
            margin-bottom: 8px
        .catalog__search__list__item
          display: flex
          align-items: center
          img
            flex-grow: 0
          .catalog__search__list__item--type
            flex-grow: 1
            margin-left: 8px
            font-size: 1.2rem
            line-height: 1.4

  //- flow
  .flow
    +pc()
      margin-bottom: 60px
    +sp()
      margin-bottom: 40px
    // common
    .flow__boxTitle
      text-align: center
      line-height: 1.5
      font-weight: bold
      color: grayTxtColor
      +pc()
        font-size: 2.4rem
      +sp()
        font-size: 1.6rem
        margin-bottom: 8px
    .flow__txt
      text-align: center
      line-height: 1.5
      color: grayTxtColor
      +pc()
        font-size: 1.8rem
        font-weight: bold
      +sp()
        font-size: 1.4rem
      &.-small
        margin-top: 8px
        +pc()
          font-size: 1.4rem
          font-weight: normal
        +sp()
          font-size: 1.2rem
    .flow__link
      color: secondColor
      text-decoration: underline
      &:hover
        text-decoration: none
    .flow__boxImg
      width: 100%
      height: auto
    // contents
    .flow__wrapper
      +pc()
        margin-bottom: 24px
      +sp()
        padding:24px 16px
        box-sizing: border-box
      .flow__caption
        text-align: center
        color: grayTxtColor
        font-weight:bold
        +pc()
          font-size: 2rem
          line-height: 1.5
          margin-bottom: 40px
        +sp()
          font-size: 1.4rem
          line-height: 1.5
          margin-bottom: 16px
      .flow__boxWrap
        +pc()
          display: flex
          justify-content: space-between
          //
          width: pcWidth
          margin: 0 auto
        .flow__box
          display: flex
          align-items: center
          //
          position: relative
          +pc()
            flex-direction: column
            //
            width: 240px
            padding: 16px
          +sp()
            justify-content: center
            // 
            margin: 0 auto 16px
          &::after
            +pc()
              content:''
              position: absolute
              top:calc((100% - 20px * 2) / 2)
              right: -32px
              arrowFill(right,20px,grayTagColor)
          &:last-of-type
            margin-bottom: 0
            &::after
              display: none
          .flow__box0
            +pc()
              margin-bottom: 16px
          .flow__box1
            +pc()
              width: 200px
              height: 200px
              margin-bottom: 16px
            +sp()
              flex-shrink: 0
              //
              width: 100px
              height: 100px
              margin-left: 8px
          &:last-of-type
            .flow__box1
              &::after
                border:none
          .flow__box2
            position: relative
            width: 100%
            +pc()
              display: flex
              flex-direction: column
              align-items: center
              // 
              height: 100%
            +sp()
              max-width: 200px
              margin: 0 8px
            // override
            .flow__txt
              &.-small
                +sp()
                  color: grayTagColor
            &::after
              +sp()
                z-index:10
                content:''
                position: absolute
                left:calc((100% - 10px * 2) / 2)
                bottom: -24px
                arrowFill(bottom,10px,grayTagColor)
          &:last-of-type
            .flow__box2
              &::after
                border:none
    .flow__attention
      margin: 0 auto
      +pc()
        width: 1160px
      +sp()
        width: auto
        margin: 16px 16px 0
      // override
      .flow__txt
        text-align: left
        line-height: 1.8
        &::before
          display:inline-block
          margin:0
          content:'※'
          text-indent:-1.8rem
          +sp()
            text-indent:-1.6rem
        +pc()
          margin-left: 1.8rem // text-indent分
        +sp()
          margin-left: 1.6rem // text-indent分
        &.-small
          margin-top: 0

