//------------------------------

#CouponTemplate
  // text
  .common__titleTxt
    font-weight: 600
    line-height: 1.4
    text-align: center
    +pc()
      font-size: 2.8rem
      margin-bottom: 25px
    +sp()
      font-size: 1.8rem
      margin-bottom: 20px
      padding: 0 16px
  .common__subTitleTxt
    margin-bottom: 24px
    font-size: 2rem
    font-weight: bold
    text-align: center
    line-height: 1.4
    +sp()
      margin-bottom: 16px
      font-size: 1.6rem
  .coupon__captionTxt
    font-weight: 600
    line-height: 1.4
    padding-bottom: 4px
    text-align: center
    +pc()
      font-size: 2.4rem
    +sp()
      font-size: 1.5rem
    &::before
      content: ""
      display: inline-block
      width: 12px
      height: 28px
      background-image: url(../img/barber_icon.png)
      background-size: contain
      vertical-align: middle
      transform: translateX(-80%) translateY(-4%) rotate(-20deg)
      +sp()
        width: 9px
        height: 22px
    &::after
      content: ""
      display: inline-block
      width: 12px
      height: 28px
      background-image: url(../img/barber_icon.png)
      background-size: contain
      vertical-align: middle
      transform: translateX(60%) translateY(-4%) rotate(20deg)
      +sp()
        width: 9px
        height: 22px

  .shopsearch__titleTxt
    font-weight: 600
    line-height: 1.4
    text-align: center
    +pc()
      font-size: 2.8rem
      margin-bottom: 16px
    +sp()
      font-size: 1.8rem
      margin-bottom: 16px
    &::before
      content: ""
      display: inline-block
      width: 40px
      height: 46px
      background-image: url(../img/scissors_icon.png)
      background-size: contain
      vertical-align: middle
      transform: translateX(-20%) translateY(-4%)
      +sp()
        width: 26px
        height: 30px
        transform: translateX(-10%) translateY(-4%)

  .shopsearch__captionTxt
    text-align: center
    line-height 1.5
    color: grayTxtColor
    +pc()
      font-size: 1.4rem
      margin-bottom: 40px
    +sp()
      font-size: 1.2rem
      margin:0 16px 24px
  .flow__titleTxt
    font-weight: 600
    line-height: 1.4
    text-align: center
    +pc()
      font-size: 2.8rem
      margin-bottom: 16px
    +sp()
      font-size: 1.8rem
      margin-bottom: 16px
    &::before
      content: ""
      display: inline-block
      width: 40px
      height: 46px
      background-image: url(../img/calendar_icon.png)
      background-size: contain
      vertical-align: middle
      transform: translateX(-20%) translateY(-4%)
      +sp()
        width: 26px
        height: 30px
        transform: translateX(-10%) translateY(-4%)
  .RB__titleTxt
    font-weight: 600
    line-height: 1.4
    text-align: center
    +pc()
      font-size: 2.8rem
      margin-bottom: 40px
    +sp()
      font-size: 1.8rem
      margin-bottom: 24px
    &::before
      content: ""
      display: inline-block
      width: 40px
      height: 46px
      background-image: url(../img/search_icon.png)
      background-size: contain
      vertical-align: middle
      transform: translateX(-20%) translateY(-4%)
      +sp()
        width: 26px
        height: 30px
        transform: translateX(-10%) translateY(-4%)
  .RB__captionTxt
    font-weight: 600
    line-height: 1.4
    padding-bottom: 4px
