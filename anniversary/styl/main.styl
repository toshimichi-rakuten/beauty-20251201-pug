    .slideInContent
      opacity: 0
    .slide-in
      opacity: 1
      animation-name: slideIn
      animation-duration: 1s

    // element  
    .main__titleTxt
      font-weight: 600
      line-height: 1.4
      text-align: center
      +pc()
        font-size: 2.6rem
        margin-bottom: 25px
      +sp()
        font-size: 2.1rem
        margin-bottom: 20px
        padding: 0 16px
    .main__titleLine
      width: 79%
