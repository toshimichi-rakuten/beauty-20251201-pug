      +pc()
        font-size: 1.8rem
        padding-top: 80px
      +sp()
        font-size: 1.6rem
        padding-top: 60px
    .main__commentTxt
      line-height: 1.3
      +pc()
        font-size: 1.4rem
      +sp()
        font-size: 1.2rem
        padding: 0 16px
        
    .main__numbersTxt
      text-align: center
      font-size: 1.4rem
      line-height: 1.3
    .main__card // 使う場合は生かし
