          font-size: 1.4rem
      .descTxt
        font-size: 1.8rem
        line-height: 1.6
        +sp()
          font-size: 1.4rem
          &:first-child
            margin-bottom: 8px
        .-small
          font-size: 1.6rem
          line-height: normal
          margin-bottom: 8px
          +sp()
            font-size: 1.2rem
            line-height: 1.4
      .notationTxt
        font-size: 1.1rem
        line-height: normal

