passStr = '../../../../../'
@import passStr + '_common/stylus/Base/_init'

//------------------------------// Common - このページで使う共通設定。自由に設定可能

mainColor = #cc5777
mainColorSub = #f3abbf
secondColor = #45a9bc
secondColorSub = #98ccd6
grayBgColor = #f7f7f7
grayTxtColor = #333333
grayTagColor = #828282
grayLineColor = #d1d1d1
redColor = #bf0000

// colors for anniversary
annivBgColor = #fdf7fc
cardBgColor = #fff
annivPink = #ff53bb
pageBullet = #d9d9d9
pageBulletOn = #ff9ad7
blueBgColor = #41a4e8


pcWidth = 1216px

//------------------------------

#anniversary// #Pagenameはページ固有の名前に置換してください

  // 共通パーツは_common/stylus/Module/Common/_campaignParts.stylにあります
  // 各ページでカスタム使用したい場合はclass名で上書きしてください

  // common
  // 汎用テキストリンク
  .textLink
    color: secondColor
    text-decoration: underline
    &:hover
      text-decoration: none
  // override
  .titleWrap
    +pc()
      margin-bottom: 40px
    +sp()
      margin-bottom: 24px

  // main
  .main
    overflow: hidden
    margin-bottom: 40px
    +sp()
      margin-bottom: 24px
    .main__background
      background-image: url('../../../../../cnt/topics/campaign/anniversary/img/main_background.png')
      background-repeat: no-repeat
      background-position: center
      background-size: cover
      .main__title
        line-height:1
        font-size:1.4rem
        text-align: center
        &Img
          opacity: 0
          width: 100%
          object-fit: cover
          +pc()
            min-height: 614px
      .main__message
        text-align: center
        margin: 0 auto
        box-sizing: border-box
        background: annivBgColor
        .main__messageBox
          //width: 100% //IE対応
          padding: 40px 16px

          // Message Title
          .main__messageTitle
            line-height: 1.3
            background: linear-gradient(-15deg,#2996d3,#2996d3 43%,#ff53bb 57%,#ff53bb)
            opacity:90% // 必要なければ削除
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 32px
            +pc()
              font-size: 2.2rem
            +sp()
              font-size: 2.0rem

          // Message Text
          .main__messageTxt
            line-height 2.2
            color:grayTxtColor
            +pc()
              display: block
              font-size: 1.6rem
            +sp()
              font-size: 1.4rem
            &.-small
              color:grayTxtColor
              +pc()
                display: inline-block
                font-size: 1.4rem
              +sp()
                display: inline
                font-size: 1.2rem
          .main__messageLink
            color: secondColor
            text-decoration: underline
            &:hover
              text-decoration: none
    
    // comment
    .main__comment
      background: linear-gradient(90deg, #FDE6F3 20%, #FDE0F1 80%)
      height: auto
      width: auto
      .main__commentBgImg
        background-image: url('../../../../../cnt/topics/campaign/anniversary/img/commentBgImg.png')
        background-repeat: no-repeat
        background-position: center
        background-size: cover;
        +pc()
          min-height: 521px
        .main__commentBox
          text-align: center
          margin: 0 auto
          +pc()
            width: pcWidth
            padding: 30px 0px 80px
          +sp()
            //width: 100%
            padding: 16px 0px 60px
          .main__cardBox
            display: flex
            gap: 15px
            height: auto //192px
            margin-bottom: 32px
            +sp()
              margin-left: 16px
              margin-bottom: 16px
              overflow-x: auto
              -ms-overflow-style: none
              /* Firefox 対応 */
              scrollbar-width: none
              /* Chrome, Safari 対応 */
              &::-webkit-scrollbar
                display:none
            .main__card
              display: flex
              flex: 1
              align-items: center
              vertical-align: middle
              background-color: cardBgColor
              padding: 24px
              border-radius: 10px
              box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1)
              +sp()
                min-width: calc(100% - 72px)
                scroll-snap-align: start
              &:last-child
                margin-right: 16px
              .cardTxt
                font-size: 1.4rem
                line-height: 1.3
                text-align: left

    // timeline
    .main__timeline
      background: linear-gradient(#FBECF5 5%, #E6F3FC 95%)
      min-height: 400px
      width: auto
      .main__timelineBox
        text-align: center
        margin: 0 auto
        +pc()
          width: pcWidth
          padding: 30px 0px 80px
        +sp()
          padding: 16px 0px 60px
        .main__timelineWrapper
          +pc()
            width: pcwidth
            height: auto
            margin-bottom: 30px
            overflow-x: scroll
            -ms-overflow-style: none
            /* Firefox 対応 */
            scrollbar-width: none
            /* Chrome, Safari 対応 */
            &::-webkit-scrollbar
              display:none
          +sp()
            padding: 0 16px
            height: 455px
            overflow: hidden
            transition: .5s height ease-in
            &.open
              height: auto
          .main__cardContainer
            position: relative
            display: flex
            gap:20px
            width: 100%
            height: 100%
            box-sizing: content-box
            +sp()
              display: block
              height: auto
            .main__timelineCard
              flex-shrink: 0
              padding: 8px 16px 16px
              background-color: cardBgColor
              border-radius: 10px
              box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1)
              &.-small
                width: 160px
              &.-large
                width: 336px
                .largeCardContent
                  display: flex
                  gap: 16px
                  +sp()
                    display: grid
              +sp()
                height: auto
                margin-bottom: 20px
                &.-small
                  width: auto
                &.-large
                  width: auto

              .titleTxtYear
                width: 160px
                text-align: left
                font-size: 3.2rem
                line-height: 1.5
                background: linear-gradient(347deg,#2996d3,#2996d3 45%,#ff53bb 70%,#ff53bb)
                opacity:90% // 必要なければ削除
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                +sp()
                  margin-bottom: 8px
              .cardContent
                flex: 1
                +sp()
                  display: flex
                .imageBox
                  display: flex
                  justify-content: center
                  +sp()
                    align-items: center
                .timeConnect
                  text-align: center
                  padding: 12px
                  +sp()
                    padding: 4px 7px
                  .timeCircle
                    position: relative
                    display: inline-block
                    width: 15px
                    height: 15px
                    border-radius: 8px
                    background-color: annivPink
                    &::after
                      position: absolute
                      top: 7px
                      left: 7px
                      height: 1px
                      width: 220px
                      background-color: annivPink
                      content: ""
                    &.-short::after
                      width: 178px
                    &.-last::after
                      width: 0px
                    +sp()
                      &::after
                        display: none
                      &.-short::after
                        display: none
                      &.-last::after
                        height: 0px
                      .lineSp
                        content: ""
                        background-color: annivPink
                        position: absolute
                        top: 7px
                        left: 7px
                        width: 1px
                        height: 0px
                .titlTxtMonth
                  font-size: 1.4rem
                  line-height: 1.5
                  +sp()
                    text-align: left
                    padding-left: 5px
                    margin-bottom: 6px
                .timelineTxtBox
                  height: 130px
                  display: flex
                  align-items: center
                  +sp()
                    height: auto
                  .timelineTxt
                    font-size: 1.4rem
                    line-height: 1.3
                    +sp()
                      font-size: 1.2rem
                      text-align: left
        .timelineButton
          width: auto
          &.open
            display: none
          button
            content:'もっと見る'
            position: relative;
            border: none;
            background-color: inherit;
            cursor: pointer;
            text-align: center;
            font-size:1.6rem;
            line-height: 1.4
            padding: 20px 10px 0 0
          .chevron-down
            display: inline-block
            //vertical-align: middle
            color: grayTxtColor
            line-height: 1
            width: 12px
            height:12px
            border: 1px solid currentColor
            border-left: 0
            border-bottom: 0
            box-sizing: border-box
            transform: translateY(-25%) rotate(135deg)
            &.open
              transform: rotate(-45deg)
        




    // numbers
    .main__numbers
      background-image: url('../../../../../cnt/topics/campaign/anniversary/img/numbersBgImg.png')
      background-repeat: no-repeat
      background-position: center
      background-size: cover
      .main__numbersBox
        text-align: center
        margin: 0 auto
        +pc()
          width: pcWidth
          padding: 30px 0px 80px
        +sp()
          padding: 16px 0px 60px
        .main__cardContainer
          display: flex
          gap: 24px
          +sp()
            display: block
            padding: 0 16px
          .main__cardBoxSmall
            width: 25%
            +sp()
              width: 100%
          .main__cardBoxLarge
            width: 50%
            +sp()
              width: 100%
          .fukidashi
            background-color: annivPink
            height: 66px
            width: 100%
            margin-bottom: 32px
            +sp()
              margin-bottom: 24px
            &::after
              content: ""
              position: relative
              top: 21px
              width: 0;
              height: 0;
              border-style: solid;
              border-color: annivPink transparent transparent transparent;
              border-width: 19px 16.5px 0px 16.5px;
              transform: rotate(45deg)
              +sp()
                top: 17px
                border-width: 15px 14px 0px 14px
            .titleBox
              height: 50px
              font-size: 1.8rem
              line-height: 1.4
              font-weight: 600
              color: white
              padding: 8px 0
          .main__cardWrapper
            //background-color: grayBgColor
            display: flex
            gap: 24px
            +sp()
              display: block
            .main__card // 2枚時限定
              width: 50%
              +sp()
                width: auto
                margin-bottom: 24px
          .main__card
            padding: 20px 20px 0 20px
            +sp()
              display: flex
              gap: 10px
              margin-bottom: 24px
              padding: 20px
            .numbersTxt
              font-size: 1.6rem
              line-height: 1.3
              +sp()
                font-size: 1.4rem
                text-align: left
            .numbersDetail
              font-size: 2.6rem
              font-weight: 600
              line-height: 1.3
              +sp()
                text-align: left
              span.gradTxt
                color: annivPink
                font-size: 3.9rem
                +sp()
                  font-size: 3.0rem
                  &.-point
                    font-size: 3.5rem
                  &.-thanx
                    font-size: 3.8rem
                &.-large
                  font-size: 5.2rem
            .numbersInfo
              font-size: 1.1rem
              line-height: 1.5
              &.user
                margin-bottom: 17px
                +sp()
                  margin-bottom: 0
              +sp()
                text-align: left

    // ranking
    .main__ranking
      background: linear-gradient(#FBECF5 5%, #E6F3FC 95%)
      min-height: 637px
      width: auto
      //display: grid
      //justify-content: center
      .main__rankingBox
        text-align: center
        margin: 0 auto
        +pc()
          width: pcWidth
          padding: 30px 0px 80px
        +sp()
          padding: 16px 0px 60px
        .main__rankingCardWrapper
          //background-color: #fff
          display: flex
          gap: 40px
          margin-bottom: 40px
          +sp()
            display: block
            padding: 0 16px
          .main__rankingCardBox
            flex: 1
            +sp()
              margin-bottom: 24px
            .fukidashi
              background-color: annivPink
              height: 41px
              width: 100%
              margin-bottom: 24px
              &::after
                content: ""
                position: relative
                top: 21px
                width: 0;
                height: 0;
                border-style: solid;
                border-color: annivPink transparent transparent transparent;
                border-width: 19px 16.5px 0px 16.5px;
                transform: rotate(45deg)
                +sp()
                  top: 17px
                  border-width: 15px 14px 0px 14px
              .titleBox
                height: 25px
                font-size: 1.8rem
                line-height: 1.4
                font-weight: 600
                color: white
                padding: 8px 0
            .main__cardWrapper
              display: grid
              gap: 24px
              .main__card
                height: 290px
                display: grid
                justify-content: center
                align-content: flex-start
                padding: 0
                gap: 16px
                +sp()
                  height: auto
                  padding: 0px 16px 24px
                img
                  width: 100%
                .textWrapper
                  display: flex;
                  width: 312px;
                  min-height: 97px;
                  align-items: center;
                  +sp()
                    width: auto
                  .ribbon
                    width: 55px
                    display: inline-flex
                    height: 100px
                    flex-direction: column
                    +sp()
                      height: 112px
                    .ribbon-top
                      display: flex;
                      padding: 11px 10px 8px 10px;
                      flex-direction: column;
                      justify-content: center;
                      align-items: center;
                      gap: 3px;
                      flex: 1 0 0;
                      background-color: blueBgColor
                      font-size: 1.4rem
                      font-weight: 600
                      line-height: normal
                      color: white
                      img
                        width: auto
                    .ribbon-bottom
                      background-color: blueBgColor
                      height: 15px
                      width: 55px
                      &::after
                        content: ""
                        position: relative
                        top: -12px
                        width: 0;
                        height: 0;
                        border-style: solid;
                        border-color: transparent transparent #fff transparent;
                        border-width: 0px 27.5px 15px 27.5px; 
                  .textBox
                    display: flex;
                    width: 100%
                    padding: 16px 8px 6px 8px;
                    flex-direction: column;
                    .titleTxt
                      font-size: 2.2rem
                      font-weight: 600
                      line-height: 1.1
                      text-align: center
                      //color: annivPink
                      margin-bottom: 6px
                      &.-uppercase
                        text-transform: uppercase
                      +sp()
                        font-size: 2.0rem
                    .descTxt
                      font-size: 1.4rem
                      line-height: normal
                      text-align: center
                      +sp()
                        font-size: 1.2rem
      .main__rankingTxt
        font-size: 1.1rem

                       
    // salon comment
    .main__saloncomment
      background-image: url('../../../../../cnt/topics/campaign/anniversary/img/numbersBgImg.png')
      background-repeat: no-repeat
      background-position: center
      background-size: cover
      .main__saloncommentBox
        text-align: center
        margin: 0 auto
        +pc()
          width: pcWidth
          padding: 30px 0px 80px
        +sp()
          padding: 16px 0px 60px
        .saloncommentContainer //コンテナ
          width: 950px
          margin: 0 auto
          display: flex
          gap: 24px
          +sp()
            width: auto
            display: block
            padding: 0 16px
          .main__card
            position: relative
            display: grid  
            justify-content: center   
            width: 50%
            height: 233px
            padding: 40px
            &::after
              content: ""
              position: absolute;
              top: 0;
              left: 0;
              height: 143px
              width: 130px
              clip-path: polygon(0 42%, 64% 0, 100% 0%, 0% 70%)
              background-color: annivPink
            +sp()
              width: auto
              height: auto
              margin-bottom: 24px
              padding: 30px
              gap: 27px
              &::after
                height: 70px
                width: 65px
                clip-path: polygon(0 42%, 64% 0, 100% 0%, 0% 70%)
            .textBox
              text-align: center
              .titleTxt
                font-size: 1.8rem
                line-height: normal
                +sp()
                  font-size: 1.4rem
                span
                  font-size: 2.4rem
                  font-weight: 600
                  +sp()
                    font-size: 2.0rem
              .captionTxt
                font-size: 1.6rem
                line-height: normal
                margin-bottom: 6px
                padding: 0 58px
                +sp()
                  font-size: 1.2rem
                  padding: 0 16px
              .descTxt
                text-align: left
                font-size: 1.8rem
                line-height: 1.6
                +sp()
                  font-size: 1.4rem


    // logo
    .main__logo
      background: linear-gradient(#FBECF5 5%, #E6F3FC 95%)
      min-height: 637px
      width: auto
      .main__logoBox
        margin: 0 auto
        text-align: center
        +pc()
          width: pcWidth
          padding: 30px 0px 80px
        +sp()
          padding: 16px 0px 60px
        .main__logoContent
          display: grid
          justify-content: center
          gap: 24px
          +sp()
            display: block
            padding: 40px 16px 0
          .descTxt
            font-size: 1.8rem
            line-height: 1.9
            +sp()
              font-size: 1.4rem
              line-height: 1.6
              margin-bottom: 24px
            .captionTxt
              font-size: 1.2rem
          .cardBox
            margin: 0 auto
            .main__card
              width: 232px
              padding: 30px 40px
              +sp()
                width: auto
                margin: 0 auto 24px
              .titleTxt
                font-size: 1.4rem
                font-weight: 600
                line-height: 1.4
                margin-bottom: 6px
              .conceptTxt
                font-size: 2.4rem
                line-height: 1.4
                background: linear-gradient(#ff53bb 20%,#2996d3 80%)
                opacity:90% // 必要なければ削除
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
          .triangle
            width: 0px;
            height: 0px;
            border-style: solid;
            border-width: 14px 16.5px 0 16.5px;
            border-color: #ff53bb transparent transparent transparent;
            transform: rotate(0deg);
            margin: 0 auto
            +sp()
              margin-bottom: 24px
            &.-right
              transform: rotate(-90deg);
              margin: auto 0
              +sp()  
                transform: rotate(0deg)
                margin: 0 auto 24px
          .imageBox
            display: flex
            gap: 10px
            &.-large
              justify-content: center
              gap: 24px
              +sp()
                margin: 0 auto
                img
                  width: 90%
                  margin-bottom: 24px
            +sp()
              display: block
              margin-bottom: 14px
              img
                width: 48%
                height: auto
                margin-bottom: 10px
                &:nth-child(even)
                  margin-left: 10px
          .videoBox
            background-color: #e3e3e3
            margin: 0 auto 40px
            +sp()
              margin: 0 auto
            video
              width: 646px
              height: 361px
              +sp()  
                width: 100%
                height: auto


