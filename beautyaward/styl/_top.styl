#otherContent
  margin: 0 auto
  padding: 10px 0 0
  width: 432px
  text-align: center

  +sp()
    padding: 0 0 40px
    max-width: 432px
    width: 90%

.banner
  &__item + &__item
    margin-top: 20px

  +pc()
    &__item
      &__link
        display: block
        opacity: 1
        transition: .25s easeInOutQuad

        &:hover
          opacity: .7
          transition-duration: .15s
