passStr = '../../../../../'
@import passStr + '_common/stylus/Base/_init'

//------------------------------// Common - このページで使う共通設定。自由に設定可能

mainColor = #cc5777
mainColorSub = #f3abbf
secondColor = #45a9bc
secondColorSub = #98ccd6
grayBgColor = #f7f7f7
grayTxtColor = #333333
grayTagColor = #828282
grayLineColor = #d1d1d1
redColor = #bf0000

lavenderColor = #8FA3CD
lightBlueColor = #83BFCE
beigeColor = #D4BC7C
wisteriaYellowColor = #947600

pcWidth = 1216px
couponWidth = 430px // 3つ並列にする場合は357px以内にする

//------------------------------

#CouponTemplate

  // main
  .main
    margin: 0 auto 40px
    +sp()
      margin-bottom: 24px
    .main__title
      display: block
      width:pcWidth
      margin: 0 auto
      line-height:1
      font-size:1.4rem
      text-align: center
      +sp()
        width:100%
        margin: 0 auto
      &Img
        width:100%
    .main__terms
      text-align: center
      //
      margin: 0 auto
      box-sizing: border-box
      background: grayBgColor
      +pc()
        width:pcWidth
        padding: 10px 40px
      +sp()
        padding: 10px
      .main__termsBox
        width: 100% //IE対応
        .main__termsTxt
          line-height 1.5
          color:grayTxtColor
          +pc()
            font-size: 1.6rem
          +sp()
            font-size: 1.2rem
          &.-small
            +pc()
              display: inline-block
              font-size: 1.4rem
            +sp()
              display: inline
              font-size: 1.2rem
        .main__termsLink
          color:secondColor
          text-decoration: underline
          &:hover
            text-decoration: none

  //- ラ・クーポン
  .coupon
    width:100%
    // text-align: center

    // 事前
    .couponAdd
      +pc()
        margin-bottom:60px
        //
        display: flex
        flex-direction: column
        justify-content: center
      +sp()
        padding 0 10px 40px
        box-sizing: border-box

      // ボタンセット(bgColor,txtColor)
      btnSet(Colors.CrimsonRed.color,#fff)

      .coupon__terms
        +pc()
          display: flex
          flex-direction: column
          //
          width: auto
          height:auto
          margin: 16px auto
          &:last-of-type
            margin: 0 auto
        +sp()
          margin: 0 auto
        .coupon__termsTxt
          font-size: 1.4rem
          line-height 1.5
          color:grayTxtColor
          +sp()
            font-size: 1.2rem
          .coupon__termsLink
            color:secondColor

    // 獲得
    .couponGet

      // 非遷移クーポン
      // couponOneClickSet(couponWidth,couponColor)
      @import passStr + '_common/stylus/Module/Common/_couponOneClick'
      couponOneClickSet(couponWidth,#947600)

      .couponOneClickSetWrap
        background: none
        padding-top: 0
        +pc()
          width:  auto
          margin-bottom: 0
        .couponOneClickSetTitle
          display: none
        +sp()
          margin-bottom: 0
        .couponOneClickSet .couponBox
          +pc()
            width: auto
          .couponBoxUpper
            +sp()
              margin-bottom: 0
            .couponOneClick .couponOneClick-default .couponComponent .couponDetail .couponDetailBottom
              +pc()
                padding: 36px 39px 48px;
      .coupon__info        
        line-height: 1.8
        +pc()
          font-size: 1.2rem
          text-align: center
        +sp()
          margin-top: 8px
          padding: 0 16px
          font-size: 1rem
          text-align: center



  //- 検索UI
  // JSに影響する記述 ----------------------- //
  $loader-size = 60px
  $loader-size = 60px

  #salonFilterSection
    .is-hidden
      display: none

    .loader,
    .loader:after
      display: none

    &.is-loading
      .loader,
      .loader:after
        display: block

      #salonFilter,
      #salonList
        display: none

    .loader,
    .loader:after
      box-sizing: border-box
      width: $loader-size
      height: $loader-size
      border-radius: 50%

    .loader
      position: relative
      margin: $loader-size auto
      border-top: 3px solid rgba(#333, .1)
      border-right: 3px solid rgba(#333, .1)
      border-bottom: 3px solid rgba(#333, .1)
      border-left: 3px solid rgba(#333, .2)
      text-indent: -9999em
      font-size: 10px
      transform: translateZ(0)
      animation: loading 1.1s infinite linear

    #salonList
      opacity: 0
      transition: opacity 0s ease-out

      &.is-loading
        opacity: 1
        transition-delay: .3s
        transition-duration: .35s

      .position-relative
        position: relative

      .stretched-link
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
        tap-highlight-color: rgba(0, 0, 0, 0)

        &::after
          position: absolute
          top: 0
          right: 0
          bottom: 0
          left: 0
          z-index: 1
          background-color: rgba(0, 0, 0, 0)
          content: ''
          pointer-events: auto

      .not-stretched-link
        position: relative
        z-index: 2

  @keyframes loading
    0%
      transform: rotate(0)

    100%
      transform: rotate(360deg)

  // レイアウト関連 --------------------- //
  #salonFilter
    position: relative
    margin-bottom: 20px
    padding: 40px 16px
    background-color: #000
    text-align: center
    box-sizing: border-box
    +pc()
      padding 40px 0
    +sp()
      padding 16px

    &:after
      position: absolute
      bottom: -40px
      left: 50%
      margin-left: -20px
      border: 20px solid transparent
      border-top: 20px solid #000
      content: ''
      +sp()
        bottom -32px
        
    .filter-heading
      color: #fff
      font-weight: bold
      +pc()
        margin-bottom: 20px
        font-size 3.2rem
        line-height: 1.3
      +sp()
        margin-bottom: 16px
        font-size:1.6rem
        line-height: 1.4

    .filter-lead
      display: flex
      justify-content: center
      +pc()
        margin-bottom: 20px
        padding-bottom: 8px
      +sp()
        margin-bottom: 16px
      .filter-lead-img
        +pc()
          width: 120px
        +sp()
          width: 100px
      .filter-lead-text
        color: #fff
        font-weight: bold
        +pc()
          padding-left: 24px
          font-size: 2rem
          line-height: 1.4
        +sp()
          width: 167px
          padding-left: 16px
          font-size: 1.2rem
          text-align: center
          line-height: 1.5
        .filter-lead-text-xlarge
          display: block
          line-height: 1
          +pc()
            padding: 8px 0
            font-size: 4.8rem
          +sp()
            padding: 2px 0
            font-size: 3.2rem
          .filter-lead-text-large
            +sp()
              font-size: 2.4rem
              line-height: 1
          .filter-lead-text-middle
            +pc()
              font-size: 2.4rem
              line-height: 1
            +sp()
              display: block
              font-size: 1.6rem
              line-height: 1.4

    .filter-select
      position: relative
      display: inline-block

      &:after
        position: absolute
        right: 16px
        bottom: 16px
        border: 6px solid transparent
        border-top: 6px solid Colors.DarkGray.color
        content: ''

      +pc()
        margin: 4px
        width: 360px

      +sp()
        margin-bottom:8px
        width: 100%

    .filter-select__item
      overflow: hidden
      box-sizing: border-box
      padding-right: 44px
      padding-left: 16px
      width: 100%
      height: 54px
      border: 1px solid Colors.MediumGray.color
      border-radius: 4px
      background-color: #fff
      text-overflow: ellipsis
      white-space: nowrap
      font-weight: bold
      font-size: 2rem
      line-height: @height
      line-height: 1
      cursor: pointer
      appearance: none
      +sp()
        height: 48px
        font-size: 1.8rem

      option
        line-height: 1

      &::-ms-expand
        display: none

      &:disabled
        color: grayTagColor
        background-color: Colors.LightGray.color
        cursor: auto

    .filter-button-list
      margin: 0 auto
      padding: 0
      list-style: none
      font-size: 0
      +pc()
        width: 800px

      .filter-button-list-item

        +pc()
          display: inline-block
          margin: 8px

        +sp()
          display: block
          margin-bottom: 8px

      .filter-list-button
        border: 1px solid Colors.Secondary.color
        border-radius: 4px
        background-color: Colors.Secondary.color
        color: #fff
        font-size: 1.6rem
        line-height: 1
        cursor: pointer

        +pc()
          padding: 14px 16px
          Transition(color, .25s)

          &:hover
            opacity: .8
            transition-duration: .15s

          &.is-selected:hover
            // background-color: lighten(Colors.Secondary.color, 40)

        +sp()
          width:100%
          padding: 8px 16px
          font-size: 1.4rem

        &.is-selected
          background-color: #fff
          color: Colors.Secondary.color

    .filter-button
      box-sizing: border-box
      padding: 0 16px
      width: 200px
      height: 54px
      border: none
      border-radius: 4px
      background-color: wisteriaYellowColor
      color: #fff
      font-weight: bold
      font-size: 2rem
      line-height: @height
      line-height: 1
      cursor: pointer

      +pc()
        margin: 0 4px
        Transition(background-color, .25s)

        &:hover
          background-color: lighten(wisteriaYellowColor, 7)
          transition-duration: .15s

      +sp()
        margin: 0 0 8px
        width: 100%
        height: 48px
        font-size: 1.8rem

      &:disabled
        background-color: Colors.MediumGray.color
        color: Colors.DarkGray.color
        cursor: auto

  .filter-info
    text-align: center
    +pc()
      margin: 40px auto 20px
      font-size: 1.2rem
      line-height: 1.5
    +sp()
      margin: 24px auto 20px
      padding: 0 16px
      font-size: 1rem
      line-height: 1.4

  #salonList
    +pc()
      margin: 0 auto (40px - 12px)
      width: pcWidth

      .salonList
        display: flex
        flex-wrap: wrap
        margin: 0 -12px

    +sp()
      padding-right: 16px
      padding-left: 16px

      .salonList
        width: 100%

    .salonList__item
      overflow: hidden
      box-sizing: border-box
      border: 1px solid Colors.MediumGray.color
      border-radius: 8px
      background-color: #fff
      text-align: left

      +sp()
        margin: 0 auto 16px
        width: 100%

      +pc()
        display: flex
        flex-direction: column
        justify-content: space-between
        margin: 12px
        width: ((pcWidth + 24) / 3) - 24

      &.has-divide
        justify-content: normal

      .salonList__content
        +pc()
          &:hover
            .salonList__image
              transform: scale(1.05)

            .salonList__link
              color: #45A9BC

      .salonList__link
        display: block
        color: #333
        text-decoration: none

      .salonList__button
        display: block
        text-align: center
        font-size: 1.6rem
        color: #fff
        background: secondColor
        padding: 10px 0
        box-sizing: border-box
        border-radius: 4px
        +sp()
          font-size: 1.4rem
        &:hover
          opacity: 0.8

      .salonList__cover
        overflow: hidden
        +pc()
          height: 200px

        +sp()
          height: 160px

      .salonList__image
        width: 100%
        height: auto
        vertical-align: top

        +pc()
          width: 101%
          transition: transform .45s

      .salonList__buttonArea
        padding: 0 16px 16px
        +sp()
          padding: 0 8px 8px

      .salonList__outline
        line-height: 1.5
        padding: 16px
        +sp()
          padding: 10px 10px 8px 10px

      .salonList__detail
        display: flex
        //
        margin-bottom: 16px
        +pc()
          align-items: flex-start
        +sp()
          align-items: center
          //
          margin-bottom: 8px

      .salonList__menuIcon
        flex-shrink:0
        //
        display: block
        width: 60px
        height: 60px
        border-radius: 50%
        +pc()
          margin-right: 16px
        +sp()
          margin-right: 8px

      .salonList__genre
        display:flex
        justify-content: center
        align-items: center
        //
        width: 100%
        height: 100%
        border-radius: 50%
        //
        text-align: center
        color: #fff
        font-size: 1.1rem
        font-weight: bold
        padding: 8px
        box-sizing: border-box
        &.-no1
          background: lavenderColor
        &.-no2
          background: lightBlueColor
        &.-no3
          background: beigeColor

      .salonList__menuDetail
        //

      .salonList__salonName
        margin: 0 0 8px
        padding: 0
        font-weight: bold
        font-size: 1.6rem
        +sp()
          font-size: 1.4rem
          margin: 0 0 4px

      .salonList__area,
      .salonList__station
        display: block
        margin: 0 0 4px
        color: Colors.DarkGray.color
        font-weight: bold
        font-size: 1.2rem
        +sp()
          display: inline-block
          margin: 0 0 2px

        .icon
          margin-right: 2px
          font-size: 1.6rem

      .salonList__area
        margin-right: 16px

      .salonList__station
        margin-bottom: 0

      .salonList__divide
        display: flex
        flex-direction: column
        justify-content: space-between
        align-items: stretch
        //
        line-height: 1.5
        background: #fff
        height 100%
        border-top: 1px dashed Colors.MediumGray.color

      .salonList__menuName
        font-size: 1.6rem
        font-weight: bold
        color: secondColor
        +sp()
          font-size: 1.4rem

      .salonList__target
        display: inline-block
        font-weight: normal
        color:#fff
        background:secondColor
        line-height: 1
        border-radius: 4px
        border: 1px solid secondColor
        box-sizing: border-box
        +pc()
          vertical-align: 1px
          font-size: 1.2rem
          margin-right: 8px
          padding: 4px 8px
        +sp()
          vertical-align: 1px
          font-size: 1.1rem
          margin-right: 4px
          padding: 4px 6px

        &.is-all
          background: #fff
          color: secondColor

      .salonList__menuPriceArea
        margin-bottom: 16px
        text-align: right
        +sp()
          margin-bottom: 8px

        .salonList__menuTime
          font-size: 1.2rem
          margin-right: 8px
          +sp()
            font-size: 1.1rem

        .salonList__menuPrice
          font-size: 2rem
          margin-right: 8px
          +sp()
            font-size: 1.8rem

      .salonList__menuTermsArea
        background: grayBgColor
        padding: 4px 16px
        margin-bottom: 16px
        +sp()
          margin-bottom: 8px

        .salonList__menuTerm
          font-size: 1.2rem
          +sp()
            font-size: 1.1rem

      .salonList__description
        font-size: 1.4rem
        +sp()
          font-size: 1.2rem

  //- more search
  // more btn(pcWidth,bgColor)
  btnMore(pcInnerWidth,grayBgColor)

  //- howto
  .howto
    +pc()
      margin-bottom: 60px
    +sp()
      margin-bottom: 40px

    // ラ・クーポンの使い方セット
    howtoCouponset()

  // app DL
  .app
    +pc()
      margin-bottom: 60px
    +sp()
      margin-bottom: 40px

    // app DL parts(bgColor)
    // 目立たせたい時は #FFE8E8 など推奨
    appDL(#FFE8E8)

  // Campaign Deatail
  .detail

    // Campaign Deatail / ()の中にwidthを入れる。SPは何もしなくてもwidth:autoになる
    @import passStr + '_common/stylus/Module/Common/_campaignDetail'
    campaignDetail(pcWidth)

  // add component
  img
    width: 100%
  .contents__termsLink
    color: wisteriaYellowColor
    text-decoration: underline
    &:hover
      text-decoration: none

  // クーポン
  .couponComponent
    border: 1px solid wisteriaYellowColor !important
    .couponDetail
      background: linear-gradient(180deg, #AB9362 13.54%, #CFB579 38.02%, #8F6C1F 58.33%) !important
      .couponDetailUpperTag
        color: wisteriaYellowColor !important
    .couponStatus
      color: wisteriaYellowColor !important

  // アンカー
  navHeightPc = 94px
  navHeightSp = 54px

  #Introduction,
  #Chronologiste,
  #Fusiodose,
  #Flow,
  #Shoplist,
  #Detail,
  #CpnDetail
    display: block
    +pc()
      padding-top: (navHeightPc + 0)
      margin-top: -(navHeightPc + 0)
    +sp()
      padding-top: (navHeightSp + 0)
      margin-top: -(navHeightSp + 0)

  // 特典
  .prize
    +pc()
      margin-bottom: 60px
    .contents__subtitle
      color: #000
      font-weight: bold
      text-align: center
      line-height: 1.4
      +pc()
        padding: 0 0 24px
        font-size: 2rem
      +sp()
        padding: 16px
        font-size: 1.4rem
      a
        color: wisteriaYellowColor
        text-decoration: underline
        &:hover
          text-decoration: none
    .prize__content
      +pc()
        width 1216px
        display: flex
        margin: 24px auto 0
        justify-content: space-between
      +sp()
        padding: 0 24px
      .prize__box
        border 1px solid grayTagColor
        box-sizing: border-box
        border-radius: 20px
        +pc()
          width: 48%
          padding: 30px
        +sp()
          margin-bottom: 40px
          padding: 24px 0
        .contents__title
          display: flex
          justify-content: center
          align-items: center
          +pc()
            margin-bottom: 40px
          +sp()
            margin-bottom: 24px
          .title__icon
            position: relative
            width: 80px
            height: 80px
            background: #000
            border-radius: 50%
            color: #fff
            +pc()
              width: 60px
              height: 60px
            +sp()
              width: 50px
              height: 50px
            .title__icon--text
              position: absolute
              top: 50%
              left: 50%
              transform: translate(-50%, -50%)
              color: #fff
              text-align: center
              line-height: 1
              +pc()
                font-size: 1.2rem
              +sp()
                font-size: 1.2rem
              .title__icon--number
                font-weight: bold
                +pc()
                  font-size: 3rem
                +sp()
                  font-size: 2rem
          .title--text
            color: #000
            font-weight: bold
            +pc()
              padding-left: 16px
              font-size: 2rem
              line-height: 1.3
            +sp()
              padding-left: 8px
              font-size: 1.6rem
              line-height: 1.4
      // プレゼント
      .present
        +sp()
          margin-bottom: 40px
        .present__wrap
          text-align: center
          .present__item
            margin: 8px auto
            +sp()
              width 80%
            img
              width: 100%
              max-width: 360px
          .present__point
              +pc()
                width: 160px
                margin: 62px auto
              +sp()
                width: calc(100% - 132px)
                margin: 14px auto
          .present__detail
            color: #000
            font-weight: bold
            line-height: 1.4
            +pc()
              font-size: 2rem
            +sp()
              font-size: 1.4rem
        .present__info
          line-height: 1.8
          +pc()
            margin-top: 16px
            font-size: 1.2rem
            text-align: center
          +sp()
            margin-top: 8px
            padding: 0 16px
            font-size: 1rem
            text-align: center

  // ナビゲーション
  .nav__container
    display: flex
    position: sticky
    z-index: 100
    top: 0
    justify-content: space-between
    width: 100%
    border-top: solid 1px #fff
    border-bottom: solid 1px #fff
    background: #000
    +pc()
      flex-wrap: nowrap
      margin-bottom: 60px
    +sp()
      flex-wrap: wrap
      margin-bottom: 24px
    .nav__list
      border-right: solid 1px #fff
      box-sizing: border-box
      width: 33.3%
      &:last-of-type
        border-right: 0
      .nav__link
        display: inline-block
        width: 100%
        color: #fff
        font-weight: bold
        text-align: center
        line-height: 1.5
        box-sizing: border-box
        &:hover
          opacity: .8
          transition-duration: .15s
        +pc()
          padding: 14px 16px 20px
          font-size: 2rem
        +sp()
          font-size: 1.2rem
          padding: 16px 8px 18px
          display: flex
          justify-content: center
          align-items: center
          height: 100%
        .nav__text--sub
          +pc()
            font-size: 1.4rem
            line-height: 1.4
            font-weight: normal

  // メニュー紹介
  .introduction
    text-align: center
    .introduction__title
      color: #000
      font-weight: bold
      +pc()
        font-size: 3.2rem
        line-height: 1.3
        margin-bottom: 40px
      +sp()
        font-size: 1.6rem
        line-height: 1.4
        margin-bottom: 24px
    .introduction__info
      text-align: center
      font-weight: bold
      line-height: 1.4
      +pc()
        font-size: 2rem
        margin-bottom: 60px
      +sp()
        font-size: 1.4rem
        margin-bottom: 24px

  // クロノロジスト紹介
  .chronologiste
    width: 100%
    background: #000
    +pc()
      padding-bottom: 60px
      margin-bottom:  60px
    +sp()
      padding-bottom: 40px
      margin-bottom: 40px
    .chronologiste__title
      background: linear-gradient(90deg, #000 52.71%, #B6B6B6 92.43%);
      .chronologiste__title__img
        display: block
        margin: 0 auto
        +pc()
          width: 343px
          padding: 26.5px 0
        +sp()
          width: calc(100% - 114px)
          padding: 22px 0
    .chronologiste__explanation
      display: block
      color: #fff
      text-align: center
      +pc()
        width: 1000px
        margin: 0 auto
      +sp()
        width: 100%
      .chronologiste__item__img
        +pc()
          width: 600px
          margin: 0 auto
      .chronologiste__item__title
        font-weight: bold
        +pc()
          font-size: 3.2rem
          line-height: 1.3
        +sp()
          font-size: 1.6rem
          line-height: 1.4
      .chronologiste__item__title__label
        +pc()
          margin-top: 8px
          font-size: 1.4rem
          line-height: 1.5
        +sp()
          margin-top: 4px
          font-size: 1.2rem
          line-height: 1.8
      .chronologiste__item__info
        font-weight: bold
        +pc()
          margin-top: 40px
          font-size: 1.8rem
          line-height: 1.4
        +sp()
          margin-top: 24px
          padding: 0 16px
          font-size: 1.2rem
          line-height: 1.8
        .chronologiste__item__info__text
          margin-top: 8px
      .chronologiste__item__info__secondary
        margin-top: 8px
        font-weight: normal
        line-height: 1.8
        +pc()
          font-size: 1.2rem
        +sp()
