// キャンペーンテンプレ自体は以下参照のこと
// ここには絞り込みに関連するレイアウト情報のみ記載します
@import ('../../../../../../topics/campaign/_template/styl/main.styl')

// JSに影響する記述 ----------------------- //
$loader-size = 60px
$loader-size = 60px

#salonFilterSection
  .is-hidden
    display: none

  .loader,
  .loader:after
    display: none

  &.is-loading
    .loader,
    .loader:after
      display: block

    #salonFilter,
    #salonList
      display: none

  .loader,
  .loader:after
    box-sizing: border-box
    width: $loader-size
    height: $loader-size
    border-radius: 50%

  .loader
    position: relative
    margin: $loader-size auto
    border-top: 3px solid rgba(#333, .1)
    border-right: 3px solid rgba(#333, .1)
    border-bottom: 3px solid rgba(#333, .1)
    border-left: 3px solid rgba(#333, .2)
    text-indent: -9999em
    font-size: 10px
    transform: translateZ(0)
    animation: loading 1.1s infinite linear

  #salonList
    opacity: 0
    transition: opacity 0s ease-out

    &.is-loading
      opacity: 1
      transition-delay: .3s
      transition-duration: .35s

    .position-relative
      position: relative

    .stretched-link
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
      tap-highlight-color: rgba(0, 0, 0, 0)

      &::after
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        z-index: 1
        background-color: rgba(0, 0, 0, 0)
        content: ''
        pointer-events: auto

    .not-stretched-link
      position: relative
      z-index: 2

@keyframes loading
  0%
    transform: rotate(0)

  100%
    transform: rotate(360deg)

// レイアウト関連 --------------------- //
#salonFilter
  position: relative
  margin-bottom: 50px
  padding: 40px 16px
  background-color: Colors.LightGray.color
  text-align: center

  &:after
    position: absolute
    bottom: -40px
    left: 50%
    margin-left: -20px
    border: 20px solid transparent
    border-top: 20px solid Colors.LightGray.color
    content: ''

  .filter-heading
    margin: 0 0 24px
    font-weight: bold
    font-size: 2.4rem
    line-height: 1.3

  .filter-select
    position: relative
    display: inline-block

    &:after
      position: absolute
      right: 16px
      bottom: 16px
      border: 6px solid transparent
      border-top: 6px solid Colors.DarkGray.color
      content: ''

    +pc()
      margin: 0 4px
      width: 360px

    +sp()
      margin: 4px 0
      width: 100%

  .filter-select__item
    overflow: hidden
    box-sizing: border-box
    padding-right: 44px
    padding-left: 16px
    width: 100%
    height: 54px
    border: 1px solid Colors.MediumGray.color
    border-radius: 4px
    background-color: #fff
    text-overflow: ellipsis
    white-space: nowrap
    font-weight: bold
    font-size: 2rem
    line-height: @height
    line-height: 1
    cursor: pointer
    appearance: none

    option
      line-height: 1

    &::-ms-expand
      display: none

    &:disabled
      background-color: Colors.LightGray.color
      cursor: auto

  .filter-button-list
    margin: 0 auto
    padding: 0
    list-style: none
    font-size: 0

    .filter-button-list-item
      display: inline-block
      margin: 4px

    .filter-list-button
      padding: 16px
      border: 1px solid Colors.Secondary.color
      border-radius: 4px
      background-color: #fff
      color: Colors.Secondary.color
      font-size: 1.6rem
      line-height: 1
      cursor: pointer

      +pc()
        Transition(color, .25s)

        &:hover
          background-color: lighten(Colors.Secondary.color, 40)
          transition-duration: .15s

        &.is-selected:hover
          background-color: Colors.Secondary.color

      &.is-selected
        background-color: Colors.Secondary.color
        color: #fff

  .filter-button
    box-sizing: border-box
    padding: 0 16px
    width: 200px
    height: 54px
    border: none
    border-radius: 4px
    background-color: mainColor
    color: #fff
    font-weight: bold
    font-size: 2rem
    line-height: @height
    line-height: 1
    cursor: pointer

    +pc()
      margin: 0 4px
      Transition(background-color, .25s)

      &:hover
        background-color: lighten(mainColor, 7)
        transition-duration: .15s

    +sp()
      margin: 4px 0
      width: 100%

    &:disabled
      background-color: Colors.MediumGray.color
      color: Colors.DarkGray.color
      cursor: auto

#salonList
  +pc()
    margin: 0 auto
    width: pcWidth

    .salonList
      display: flex
      flex-wrap: wrap
      margin: 0 -12px

  +sp()
    padding-right: 16px
    padding-left: 16px

    .salonList
      width: 100%

  .salonList__item
    overflow: hidden
    box-sizing: border-box
    min-height: 5px
    border: 1px solid Colors.MediumGray.color
    border-radius: 8px
    background-color: #fff
    text-align: left

    +sp()
      margin: 0 0 16px
      width: 100%

    +pc()
      display: flex
      flex-direction: column
      justify-content: space-between
      margin: 12px
      width: ((pcWidth + 24) / 3) - 24

    &.has-divide
      justify-content: normal

    .salonList__content
      +pc()
        &:hover
          .salonList__image
            transform: scale(1.05)

          .salonList__link
            color: #45A9BC

    .salonList__link
      display: block
      color: #333
      text-decoration: none

    .salonList__button
      display: block
      padding: 0
      height: 50px
      border-radius: 4px
      background: mainColor
      color: #fff
      text-align: center
      text-decoration: none
      font-size: 1.6rem
      line-height: @height

      +pc()
        &:hover
          background-color: lighten(mainColor, 7)

    .salonList__cover
      +pc()
        overflow: hidden
        height: 240px

      +sp()
        min-height: 150px

    .salonList__image
      width: 100%
      height: auto
      vertical-align: top

      +pc()
        width: 101%
        transition: transform .45s

    .salonList__buttonArea
      padding: 0 20px 20px

    .salonList__outline
      padding: 20px

    .salonList__salonName
      margin: 0 0 8px
      padding: 0
      font-weight: bold
      font-size: 1.8rem
      line-height: 1.3

    .salonList__area,
    .salonList__station
      display: block
      margin: 0 0 2px
      color: Colors.DarkGray.color
      font-weight: bold
      font-size: 1.2rem
      line-height: 1.3

      .icon
        margin-right: 2px
        font-size: 1.6rem

    .salonList__divide
      // padding: 20px
      min-height: 5px
      border-top: 1px dashed Colors.MediumGray.color

      +pc()
        display: flex
        flex: 1
        flex-basis: auto
        flex-direction: column
        justify-content: space-between

    .salonList__menuName
      margin: 0 0 8px
      padding: 0
      color: secondColor
      font-weight: bold
      font-size: 1.6rem
      line-height: 1.3

    .salonList__menuPriceArea
      margin: 0 0 20px
      text-align: right

      .salonList__menuTime
        margin-right: 8px
        font-size: 1.2rem

      .salonList__menuPrice
        font-size: 2.2rem

    .salonList__description
      margin: 0 0 8px
      font-size: 1.4rem
      line-height: 1.5

    .salonList__target
      display: inline-block
      margin: 0 0 8px
      padding: 4px 8px
      border: 1px solid Colors.Secondary.color
      border-radius: 4px
      color: Colors.Secondary.color
      font-weight: bold
      font-size: 1.2rem

      &.is-all
        background-color: Colors.Secondary.color
        color: #fff
