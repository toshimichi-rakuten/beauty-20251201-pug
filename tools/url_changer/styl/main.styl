@import 'nib'

global-reset()

//------------------------------- Common Setting

mainColor = #cc5777
mainColorSub = #f3abbf
secondColor = #45a9bc
secondColorSub = #98ccd6
grayBgColor = #f7f7f7
grayTxtColor = #333333
grayTagColor = #828282
grayLineColor = #d1d1d1
redColor = #bf0000
pinkColor = #ff41be

//-------------------------------

html
body
  font-size: 62.5%
  color: grayTxtColor

  .formBox
    margin: 24px
    &Title
      display: block
      font-size: 2.4rem
      font-weight: bold
      margin-bottom: 16px
      color: grayTxtColor
    &Subtitle
      display: block
      font-size: 1.6rem
      margin-bottom: 16px
      color: grayTxtColor
      &Small
        display: block
        font-size: 1.2rem
        margin-bottom: 4px
        color: grayTxtColor
    &Form
      //
    &Ul
      &--bgGray
        width: auto
        padding: 8px
        background: grayBgColor
    &Li
      margin-bottom: 8px
      &:last-of-type
        margin-bottom: 0
    &Input
      width: 100%
      box-sizing: border-box
      padding: 2px
      font-size: 1.2rem
      appearance:none
      border: 1px solid grayLineColor
      line-height: 1.5
      color: grayTxtColor
      &::placeholder
        color:grayLineColor
    &Button
      appearance:none
      background: mainColor
      border: none
      border-radius: 4px
      font-size: 1.4rem
      color:#fff
      padding: 8px 32px
      margin: 8px 0
      cursor pointer
      transition: background 0.2s ease
      &:hover
        background:mainColorSub

