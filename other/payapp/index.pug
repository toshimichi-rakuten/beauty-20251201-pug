extends ../../../../../_common/pug/Base/_layout.pug

block init
  -
    var parameter = '?v20241224'
    var meta = {
      title: '楽天ビューティ x 楽天ペイ サロン予約＆施術完了＋楽天ペイのコード・QR払いで抽選で1,000名様に1,000ポイント当たる！',
      description: '楽天ビューティ x 楽天ペイ サロン予約＆施術完了＋楽天ペイのコード・QR払いで抽選で1,000名様に1,000ポイント当たる！',
      url: 'https://beauty.rakuten.co.jp/cnt/topics/campaign/other/payapp/',
      directory: 'payapp', //- ディレクトリ名 for Click or Appear Tag（例：/xxxx/→'xxxx'）
      og_image: 'https://beauty.rakuten.co.jp/cnt/topics/campaign/other/payapp/img/share.png' + parameter,//- default (シェア画像があれば変更)
    }
    var css = 'css/main.css' + parameter

block addHead
  //- nofollowが必要なときはコメントを外す
  //- meta(name='robots', content='noindex,nofollow')
  link(rel='stylesheet', href="css/splide.min.css")

block nav
  //- grobalNav / ''に入れた部分がcurrent表示になる
  +grobalNav('/cnt/topics/')

  //- breadcrumb
  -
    var lists = [
      {
        name: 'キャンペーン一覧・特集',
        link: 'https://beauty.rakuten.co.jp/cnt/topics/',
      },
      {
        name: meta.title, //- タイトル以外を設定したいときは変更
        link: 'current', //- 'current' is no link
      },
    ]
  +breadcrumb(lists)

block content
  //- #Pagename はページ固有の名前に置換してください
  #Payapp

    //- 終了対応
    #End
      - var endflag
      - var endTxt = 'このキャンペーンは終了しました' //- ページ上部の文言
      - var btnTxt = 'エントリー期間が終了しました' //- ボタンの文言
      +endSet(endTxt)

    //- Campaign Tag
    //- Rule: https://confluence.rakuten-it.com/confluence/pages/viewpage.action?pageId=2688949406
    #CpnTags
      -
        var taglist = {
          tag: [
            'エントリー必要', //- エントリー不要は自動的に青色になります
            //- '初回利用限定', //- 初回限定と全員、両方のクーポンがある場合はタグはなし
            //- 'アプリ限定',
            'ネット予約・施術完了',
            '条件達成',
          ],
        }
      +campaignTag(taglist)

    //- ID、class名は自由
    section#Main.main(data-ratid='cpn_' + meta.directory + '_Main' data-ratevent='appear' data-ratparam='all')
      //- Use h1
      h1.main__title
        img.main__titleImg.-pc(src='img/main.png' + parameter, alt=meta.title)
        img.main__titleImg.-sp(src='img/main_sp.png' + parameter, alt=meta.title)
      .main__terms
        .main__termsBox
          p.main__termsTxt
            | キャンペーン期間：6月24日 10:00 〜 7月24日 9:59
            span.main__termsTxt.-secondary
              | 条件達成期間：6月24日 10:00 〜 7月31日 23:59
      .main__step__container
        img.-pc(src='img/step_pc.png' + parameter, width='100%' height='')
        img.-sp(src='img/step_sp.png' + parameter, width='100%' height='')
      .main__step__info
        p ※1. 
          span.text--bold 3,000円(税込)以上のネット予約
          | が対象
        p ※2. 楽天ペイによる
          span.text--bold コード・QR払い／セルフ払いで期間中の合計3,000円(税込)以上のお支払い
          | が対象
        p ※3. 楽天ビューティでの予約＆来店サロンで楽天ペイでのお支払いに加え、楽天ペイが使えるお店
          br
          | (
          a.main__termsLink(href='https://pay.rakuten.co.jp/campaign/2020/pointprogram/rule/shop/#other_campaign' target="_blank" rel="noopener noreferrer")
            | ポイント進呈対象外の店舗を除く
          | )でのお支払いもキャンペーン達成条件の対象となります。
        p ※本キャンペーンは予告なく変更・中止される可能性があります。
        p ※条件の達成順序は順不同です。
        p ※進呈するポイント（期間限定ポイントを含む）には上限や条件があります。キャンペーン詳細は
          a.main__termsLink(href='#Detail')
            | こちら

    section#Navigation.navigation(data-ratid='cpn_' + meta.directory + '_Navigation' data-ratevent='appear' data-ratparam='all')
