    color: #ec003c
.explain_list_come
  text-align: center
  font-size: 12px
.explain_mes2
  font-size: 20px
  font-weight: 600
  text-align: center
  margin: 0 0 17px
  span
    display: block
    font-size: 12px
    font-weight: normal
    margin: 6px 0 0
.explain_btn a
  padding: 21px 0
  width: 340px
  margin: 0 auto
  background: #fff
  display: block
  text-align: center
  border: 4px #000 solid
  border-radius: 100px
  padding: 25px 0
  position: relative
  z-index: 1
  box-shadow: 0px 4px 13px 0px rgba(169, 170, 170, 0.5)
  &:before
    content: ''
    position: absolute
    top: 0
    bottom: 0
    right: 24px
    width: 12px
    height: 12px
    margin: auto
    border-top: 1px solid #000
    border-right: 1px solid #000
    transform: rotate(45deg)
