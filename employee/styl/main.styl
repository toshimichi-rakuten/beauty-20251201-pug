  //- 検索UI
  // JSに影響する記述 ----------------------- //
  $loader-size = 60px
  $loader-size = 60px

  #salonFilterSection
    .is-hidden
      display: none

    .loader,
    .loader:after
      display: none

    &.is-loading
      .loader,
      .loader:after
        display: block

      #salonFilter,
      #salonList
        display: none

    .loader,
    .loader:after
      box-sizing: border-box
      width: $loader-size
      height: $loader-size
      border-radius: 50%

    .loader
      position: relative
      margin: $loader-size auto
      border-top: 3px solid rgba(#333, .1)
      border-right: 3px solid rgba(#333, .1)
      border-bottom: 3px solid rgba(#333, .1)
      border-left: 3px solid rgba(#333, .2)
      text-indent: -9999em
      font-size: 10px
      transform: translateZ(0)
      animation: loading 1.1s infinite linear

    #salonList
      opacity: 0
      transition: opacity 0s ease-out

      &.is-loading
        opacity: 1
        transition-delay: .3s
        transition-duration: .35s

      .position-relative
        position: relative

      .stretched-link
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
        tap-highlight-color: rgba(0, 0, 0, 0)

        &::after
          position: absolute
          top: 0
          right: 0
          bottom: 0
          left: 0
          z-index: 1
          background-color: rgba(0, 0, 0, 0)
          content: ''
          pointer-events: auto

      .not-stretched-link
        position: relative
        z-index: 2

  @keyframes loading
    0%
      transform: rotate(0)

    100%
      transform: rotate(360deg)

