passStr = '../../../../../'
@import passStr + '_common/stylus/Base/_init'

//------------------------------// Common - このページで使う共通設定。自由に設定可能

mainColor = #cc5777
mainColorSub = #f3abbf
secondColor = #45a9bc
secondColorSub = #98ccd6
grayBgColor = #f7f7f7
grayTxtColor = #333333
grayTagColor = #828282
grayLineColor = #d1d1d1
redColor = #bf0000

lavenderColor = #8FA3CD
lightBlueColor = #83BFCE
beigeColor = #D4BC7C

rosePinkColor = #ffe9e8
vermilionColor = #ff6d6a
tomatoredColor = #ffa8a6
sweetredColor = #FFA7A6
PearlGreyColor = #eaeaea
SilverGreyColor = #f2f2f2
lampBlackColor = #242424
skyGreyColor = #d9d9d9

pcWidth = 1216px
couponWidth = 450px // 3つ並列にする場合は357px以内にする

//------------------------------

#Premiere

  navHeightPc = 62px
  navHeightSp = 105px

  #PremiereIntro,
  #PremiereImage,
  #PremiumStep,
  #Fragrance,
  #Flow,
  #salonFilterContainer,
  #couponMore,
  #Shoplist,
  #Detail
    display: block
    +pc()
      padding-top: (navHeightPc + 0)
      margin-top: -(navHeightPc + 0)
    +sp()
      padding-top: (navHeightSp + 0)
      margin-top: -(navHeightSp + 0)

  // main
  .main
    margin: 0 auto
    +pc()
      background: linear-gradient(180deg, #222222 0, #222222 54px, #FF6D6A 54px, #FF6D6A 190px)
    .main__title
      display: block
      position: relative
      width: pcWidth
      margin: 0 auto
      line-height:1
      font-size:1.4rem
      text-align: center
      +sp()
        width:100%
        margin: 0 auto
      img 
        width:100%

  // ナビゲーション
  .menu__nav
    position: sticky
    top: 0
    z-index: 101
    width: 100%
    +pc()
      margin-bottom: 42px
    +sp()
      margin-bottom: 16px
    .menu__nav__wrap
      width: 100%
      display: flex
      flex-wrap: nowrap
      .menu__nav__list
        background: white
        box-sizing: border-box
        width: 33.3%
        border-top: 1px solid white
        border-bottom: 1px solid white
        border-right: 1px solid white
        &:last-of-type
          border-right: 0
        .menu__nav__link
          display: flex
          align-items: center
          justify-content: center
          background: sweetredColor
          box-sizing: border-box
          color: grayTxtColor
          font-weight: bold
          text-align: center
          &:hover
            opacity: .8
          +pc()
            padding: 16px
            font-size: 2rem
            line-height: 1.4
          +sp()
            padding: 10px 16px
            font-size: 1.2rem
            line-height: 1.5

  // プルミエール
  .premiere
    +pc()
      margin-bottom: 60px
    +sp()
      margin-bottom: 40px
      +pc()
        width: 950px
        margin: 0 auto 60px
        padding: 20px 10px
        font-size: 2.8rem
      +sp()
        margin: auto
        font-size: 1.8rem
    .premiere--title
      position: relative
      background: rosePinkColor
      border-radius: 4px
      box-sizing: border-box
      color: black
      text-align: center
      line-height: 1.3
      +pc()
        width: 950px
        margin: 0 auto 23px
        padding: 20px 10px
        font-size: 2.4rem
      +sp()
        width: calc(100% - 32px)
        margin: auto
        padding: 12px
        font-size: 1.6rem
      &:after
        position: absolute
        right: 0
        left: 0
        width: 0
        height: 0
        margin: auto
        border-style: solid
        border-bottom: 0
        content: ""
        +pc()
          bottom: -22px
          border-right: 19px solid transparent
          border-left: 19px solid transparent
          border-top: 23px solid rosePinkColor
        +sp()
          bottom: -16px
          border-right: 13px solid transparent
          border-left: 13px solid transparent
          border-top: 16px solid rosePinkColor
    .premiere__main
      width: 100%
      background: PearlGreyColor
      text-align : center
      +pc()
        margin: 32px auto 60px
      +sp()
        margin: 16px auto
      .premiere__main--title
        color: black
        font-weight: bold
        line-height: 1.3
        +pc()
          padding-top: 40px
          font-size: 3.2rem
        +sp()
          padding-top: 30px
          font-size: 2rem
      .premiere__main--caption
        padding-top: 6px
        font-size: 1.2rem
        line-height: 1.5
      .premiere__secondary__feature
        width: 100%
        margin: 8px auto 0
        background: PearlGreyColor
        +pc()
          width: 950px
  .premiere__secondary
    +pc()
      margin-bottom: 60px
    +sp()
      margin-bottom: 16px
    .premiere__secondary--title
      display: flex
      align-items: center
      justify-content: center
      padding: 15px
      background: vermilionColor
      color: white
      font-weight: bold
      +pc()
        font-size: 3.2rem
        line-height: 1.3
      +sp()
        font-size: 1.6rem
        line-height: 1.4
    .premiere__secondary--title--info
      text-align: center
      font-size: 1.2rem
      +pc()
        padding-top: 24px
        line-height: 1.5
      +sp()
        padding-top: 8px
        line-height: 1.8
    .premiere__finish__container
      +pc()
        width: 918px
        margin: 0 auto 60px
        padding-top: 40px
      +sp()
        display: flex
        overflow: hidden
        margin: 0 auto 16px
        padding-top: 16px
      .premiere__finish
        +pc()
          display: flex
        +sp()
          display: flex
          list-style: none
          padding: 0
          animation: slide-img 20s infinite linear 0.5s both
        .premiere__finish__img
          +pc()
            width: 224px
            margin-right: 20px
            &:last-of-type
              border-right: 0
          +sp()
            width: 136px
            margin-left: 16px
      // sp用スライドアニメーション
      @keyframes slide-img
        from
          transform: translateX(0)
        to
          transform: translateX(-100%)
    .premiere__recommend__target
      width: 100%
      background: SilverGreyColor
      +pc()
        margin-bottom: 60px
      +sp()
        margin-bottom: 16px
      .premiere__recommend__target__img
        +pc()
          width: 548px
          margin: auto
          padding-top: 40px
          box-sizing: border-box
        +sp()
          width: 100%
    .premiere__recommend__check__container
      background: rosePinkColor
      border-radius: 10px
      box-sizing: border-box
      color: lampBlackColor
      +pc()
        width: 910px
        margin: 0 auto 60px
        padding: 40px 20px
      +sp()
        width: calc(100% - 32px)
        margin: 0 auto 16px
        padding: 20px 16px
      .premiere__recommend__check
        display: flex
        align-items: top
        justify-content: center
      .premiere__recommend__check__img
        +pc()
          width: 303px
        +sp()
          width: 45.7%
      .premiere__recommend__check__caption
        +pc()
          width: 390px
          text-align: center
        +sp()
          width: 54.3%
          margin-left: 10px
          font-size: 1.2rem
          text-align: left
          line-height: 1.8
      .premiere__recommend__check__caption--title
        display: flex
        align-items: center
        justify-content: center
        position: relative
        margin: 0 auto 18px
        padding: 12px 20px
        background: grayTxtColor
        border-radius: 5px
        box-sizing: border-box
        color: white
        font-weight: bold
        line-height: 1.4
        +pc()
          width: 280px
          font-size: 2rem
        +sp()
          width: 234px
          font-size: 1.6rem
        &:after
          position: absolute
          right: 0
          left: 0
          width: 0
          height: 0
          margin: auto
          border-style: solid
          border-right: 10px solid transparent
          border-left: 10px solid transparent
          border-top: 20px solid grayTxtColor
          border-bottom: 0
          content: ""
          +pc()
            bottom: -18px
          +sp()
            bottom: -12px
      .premiere__recommend__check__caption--text
        padding-top: 20px
        font-size: 1.4rem
        +pc()
          line-height: 1.8
        +sp()
          text-align: center
          line-height: 1.4
      .premiere__recommend__check__caption--text-bold
        font-weight: bold
      .premiere__recommend__check__caption--text-emphasis
        color: vermilionColor
        font-weight: bold
        +pc()
          border-bottom: 1px solid vermilionColor
          font-size: 1.6rem
          line-height: 1.8
        +sp()
          font-size: 1.4rem
          line-height: 1.4
    .premiere__recommend__technology__container
      background: SilverGreyColor
      +pc()
        margin-bottom: 60px
      +sp()
        margin-bottom: 16px
      .premiere__recommend__technology__wrap
        text-align: center
        +pc()
          padding: 40px
        +sp()
          padding: 20px 16px
        .premiere__recommend__technology--title
          display: flex
          align-items: center
          justify-content: center
          padding: 8px 16px
          background: grayTxtColor
          color: tomatoredColor
          font-weight: bold
          line-height: 1.4
          +pc()
            width: 451px
            margin: 0 auto 40px
            font-size: 2rem
          +sp()
            width: 232px
            margin: 0 auto 10px
            font-size: 1.6rem
        .premiere__recommend__technology--lead
          color: black
          font-size: 1.2rem
          line-height: 1.8
        .premiere__recommend__technology--info
          color: black
          +pc()
            font-size: 1.2rem
            line-height: 1.5
          +sp()
            font-size: 1rem
            line-height: 1.8
        .premiere__recommend__technology__img
          margin: 10px auto
          +pc()
            width: 341px
          +sp()
            width: 100%

    // プレミアムステップ
    .premiumstep__container
      +pc()
        width: 950px
        margin: auto
      +sp()
        width: 100%
        overflow: hidden
      .premiumstep__img
        +pc()
          margin: 40px auto 20px
        +sp()
          margin: 0 auto 16px
      .premiumstep--caption
        color: black
        text-align: center
        font-weight: bold
        line-height: 1.4
        +pc()
          margin-bottom: 20px
          font-size: 2rem
        +sp()
          margin-bottom: 16px
          font-size: 1.4rem
      .premiumstep__step
        +pc()
          display: flex
          width: 100%
        +sp()
          margin-left calc((100% - 200px) / 2) !important
          &:last-of-type
            margin-left: 0
            margin-right calc((100% - 200px) / 2) !important
        .premiumstep__step__list
          position: relative
          +pc()
            width: 210px
            margin-right: 37px
          +sp()
            width: 200px !important
            margin-right: 28px
          &:nth-of-type(-n+3)::after
            +pc()
              position: absolute
              top: 105px
              right: -26px
              width: 0
              height: 0
              border-top: 13px solid transparent
              border-left: 13px solid skyGreyColor
              border-bottom: 13px solid transparent
              transform: translateY(-50%)
              content: ''
          &:last-of-type
            +pc()
              margin-right: 0
      .premiumstep__step--info
        text-align: center
        +pc()
          margin-top: 24px
          font-size: 1.2rem
          line-height: 1.5
        +sp()
          margin-top: 32px
          font-size: 1rem
          line-height: 1.8

      //- SP splide スライダー
      .splide
        +sp()
          width: 200px
          margin: 0 auto 24px
      .splide__track
        +sp()
          overflow: visible !important
      .splide__arrow.splide__arrow--next:disabled
        display: none !important
      .splide__pagination
        bottom: -26px
      .splide__arrow:disabled
        display: none !important
      .splide__pagination__page
        width: 6px
        height: 6px
        background #ccc
      .splide__pagination__page.is-active
        width: 6px
        height: 6px
        background skyGreyColor
        transform: scale(1)
      .splide__arrow
        display: block
        position: absolute !important
        top: 50% !important
        width: 0 !important
        height: 0 !important
        background: transparent !important
        border-radius: 0 !important
        transform: translateY(-50%) !important
        content: '' !important
        &.splide__arrow--next
          right: -21px !important
          border-top: 12px solid transparent !important
          border-left: 12px solid skyGreyColor !important
          border-bottom: 12px solid transparent !important
        &.splide__arrow--prev
          left: -21px !important
          border-top: 12px solid transparent !important
          border-right: 12px solid skyGreyColor !important
          border-bottom: 12px solid transparent !important
        svg
          display: none

    //- fragrance
    .fragrance__container
      width: 100%
      +pc()
        margin: 40px auto 60px
      +sp()
        margin: 10px auto 40px
      .fragrance--caption
        text-align: center
        +pc()
          margin-bottom: 40px
          font-size: 2rem
          font-weight: bold
          line-height: 1.4
        +sp()
          margin-bottom: 10px
          padding: 0 8px
          font-size: 1.2rem
          line-height: 1.8
      .fragrance__img
        +pc()
          width: 766px
          margin: 0 auto 60px
        +sp()
          width: calc(100% - 4px)
          margin: 0 0 40px auto

  //- 検索UI
  // JSに影響する記述 ----------------------- //
  $loader-size = 60px
  $loader-size = 60px

  #salonFilterSection
    .is-hidden
      display: none

    .loader,
    .loader:after
      display: none

    &.is-loading
      .loader,
      .loader:after
        display: block

      #salonFilter,
      #salonList
        display: none

    .loader,
    .loader:after
      box-sizing: border-box
      width: $loader-size
      height: $loader-size
      border-radius: 50%

    .loader
      position: relative
      margin: $loader-size auto
      border-top: 3px solid rgba(#333, .1)
      border-right: 3px solid rgba(#333, .1)
      border-bottom: 3px solid rgba(#333, .1)
      border-left: 3px solid rgba(#333, .2)
      text-indent: -9999em
      font-size: 10px
      transform: translateZ(0)
      animation: loading 1.1s infinite linear

    #salonList
      opacity: 0
      transition: opacity 0s ease-out

      &.is-loading
        opacity: 1
        transition-delay: .3s
        transition-duration: .35s

      .position-relative
        position: relative

      .stretched-link
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
        tap-highlight-color: rgba(0, 0, 0, 0)

        &::after
          position: absolute
          top: 0
          right: 0
          bottom: 0
          left: 0
          z-index: 1
          background-color: rgba(0, 0, 0, 0)
          content: ''
          pointer-events: auto

      .not-stretched-link
        position: relative
        z-index: 2

  @keyframes loading
    0%
      transform: rotate(0)

    100%
      transform: rotate(360deg)

  // レイアウト関連 --------------------- //
  #salonFilter
    position: relative
    padding: 40px 16px
    background-color: rosePinkColor
    text-align: center
    box-sizing: border-box
    +pc()
      margin-bottom: 40px
      padding 30px 0
    +sp()
      margin-bottom: 24px
      padding 16px

    &:after
      position: absolute
      bottom: -40px
      left: 50%
      margin-left: -20px
      border: 20px solid transparent
      border-top: 20px solid rosePinkColor
      content: ''
      +sp()
        bottom -32px

    .filter-heading
      color: vermilionColor
      font-weight: bold
      +pc()
        font-size 3.2rem
        margin-bottom: 20px
        line-height: 1.3
      +sp()
        font-size: 1.6rem
        margin: 0 auto 16px
        line-height: 1.4

    .filter-select
      position: relative
      display: inline-block

      &:after
        position: absolute
        right: 16px
        bottom: 16px
        border: 6px solid transparent
        border-top: 6px solid Colors.DarkGray.color
        content: ''

      +pc()
        margin: 4px
        width: 360px

      +sp()
        margin-bottom:8px
        width: 100%

    .filter-select__item
      overflow: hidden
      box-sizing: border-box
      padding-right: 44px
      padding-left: 16px
      width: 100%
      height: 54px
      border: 1px solid Colors.MediumGray.color
      border-radius: 4px
      background-color: #fff
      text-overflow: ellipsis
      white-space: nowrap
      font-weight: bold
      font-size: 2rem
      line-height: @height
      line-height: 1
      cursor: pointer
      appearance: none
      +sp()
        height: 48px
        font-size: 1.8rem

      option
        line-height: 1

      &::-ms-expand
        display: none

      &:disabled
        color: black
        background-color: white
        cursor: auto

    .filter-button-list
      margin: 0 auto
      padding: 0
      list-style: none
      font-size: 0
      +pc()
        width: 800px

      .filter-button-list-item

        +pc()
          display: inline-block
          margin: 8px

        +sp()
          display: block
          margin-bottom: 8px

      .filter-list-button
        border: 1px solid Colors.Secondary.color
        border-radius: 4px
        background-color: Colors.Secondary.color
        color: #fff
        font-size: 1.6rem
        line-height: 1
        cursor: pointer

        +pc()
          padding: 14px 16px
          Transition(color, .25s)

          &:hover
            opacity: .8
            transition-duration: .15s

          &.is-selected:hover
            // background-color: lighten(Colors.Secondary.color, 40)

        +sp()
          width:100%
          padding: 8px 16px
          font-size: 1.4rem

        &.is-selected
          background-color: #fff
          color: Colors.Secondary.color

    .filter-button
      box-sizing: border-box
      padding: 0 16px
      width: 200px
      height: 54px
      border: none
      border-radius: 4px
      background-color: vermilionColor
      color: #fff
      font-weight: bold
      font-size: 2rem
      line-height: @height
      line-height: 1
      cursor: pointer

      +pc()
        margin: 0 4px
        Transition(background-color, .25s)

        &:hover
          background-color: lighten(vermilionColor, 7)
          transition-duration: .15s

      +sp()
        margin: 0 0 8px
        width: 100%
        height: 48px
        font-size: 1.8rem

      &:disabled
        background-color: vermilionColor
        color: white
        cursor: auto

  #salonList
    +pc()
      margin: 0 auto (40px - 12px)
      width: pcWidth

      .salonList
        display: flex
        flex-wrap: wrap
        margin: 0 -12px

    +sp()
      padding-right: 16px
      padding-left: 16px

      .salonList
        width: 100%

    .salonList__item
      overflow: hidden
      box-sizing: border-box
      border: 1px solid Colors.MediumGray.color
      border-radius: 8px
      background-color: #fff
      text-align: left

      +sp()
        margin: 0 auto 16px
        width: 100%

      +pc()
        display: flex
        flex-direction: column
        justify-content: space-between
        margin: 12px
        width: ((pcWidth + 24) / 3) - 24

      &.has-divide
        justify-content: normal

      .salonList__content
        +pc()
          &:hover
            .salonList__image
              transform: scale(1.05)

            .salonList__link
              color: #45A9BC

      .salonList__link
        display: block
        color: #333
        text-decoration: none

      .salonList__button
        display: block
        text-align: center
        font-size: 1.6rem
        color: #fff
        background: secondColor
        padding: 10px 0
        box-sizing: border-box
        border-radius: 4px
        +sp()
          font-size: 1.4rem
        &:hover
          opacity: 0.8

      .salonList__cover
        overflow: hidden
        +pc()
          height: 200px

        +sp()
          height: 160px

      .salonList__image
        width: 100%
        height: auto
        vertical-align: top

        +pc()
          width: 101%
          transition: transform .45s

      .salonList__buttonArea
        padding: 0 16px 16px
        +sp()
          padding: 0 8px 8px

      .salonList__outline
        line-height: 1.5
        padding: 16px
        +sp()
          padding: 10px 10px 8px 10px

      .salonList__detail
        display: flex
        //
        margin-bottom: 16px
        +pc()
          align-items: flex-start
        +sp()
          align-items: center
          //
          margin-bottom: 8px

      .salonList__menuIcon
        flex-shrink:0
        //
        display: block
        width: 60px
        height: 60px
        border-radius: 50%
        +pc()
          margin-right: 16px
        +sp()
          margin-right: 8px

      .salonList__genre
        display:flex
        justify-content: center
        align-items: center
        //
        width: 100%
        height: 100%
        border-radius: 50%
        //
        text-align: center
        color: #fff
        font-size: 1.1rem
        font-weight: bold
        padding: 8px
        box-sizing: border-box
        &.-no1
          background: lavenderColor
        &.-no2
          background: lightBlueColor
        &.-no3
          background: beigeColor

      .salonList__menuDetail
        //

      .salonList__salonName
        margin: 0 0 8px
        padding: 0
        font-weight: bold
        font-size: 1.6rem
        +sp()
          font-size: 1.4rem
          margin: 0 0 4px

      .salonList__area,
      .salonList__station
        display: block
        margin: 0 0 4px
        color: Colors.DarkGray.color
        font-weight: bold
        font-size: 1.2rem
        +sp()
          display: inline-block
          margin: 0 0 2px

        .icon
          margin-right: 2px
          font-size: 1.6rem

      .salonList__area
        margin-right: 16px

      .salonList__station
        margin-bottom: 0

      .salonList__divide
        display: flex
        flex-direction: column
        justify-content: space-between
        align-items: stretch
        //
        line-height: 1.5
        background: #fff
        height 100%
        border-top: 1px dashed Colors.MediumGray.color

      .salonList__menuName
        font-size: 1.6rem
        font-weight: bold
        color: secondColor
        +sp()
          font-size: 1.4rem

      .salonList__target
        display: inline-block
        font-weight: normal
        color:#fff
        background:secondColor
        line-height: 1
        border-radius: 4px
        border: 1px solid secondColor
        box-sizing: border-box
        +pc()
          vertical-align: 1px
          font-size: 1.2rem
          margin-right: 8px
          padding: 4px 8px
        +sp()
          vertical-align: 1px
          font-size: 1.1rem
          margin-right: 4px
          padding: 4px 6px

        &.is-all
          background: #fff
          color: secondColor

      .salonList__menuPriceArea
        margin-bottom: 16px
        text-align: right
        +sp()
          margin-bottom: 8px

        .salonList__menuTime
          font-size: 1.2rem
          margin-right: 8px
          +sp()
            font-size: 1.1rem

        .salonList__menuPrice
          font-size: 2rem
          margin-right: 8px
          +sp()
            font-size: 1.8rem

      .salonList__menuTermsArea
        background: grayBgColor
        padding: 4px 16px
        margin-bottom: 16px
        +sp()
          margin-bottom: 8px

        .salonList__menuTerm
          font-size: 1.2rem
          +sp()
