          +pc()
            padding-top: 40px
            font-size: 1.2rem
            line-height: 1.5
          +sp()
            padding-top: 24px
            font-size: 1rem
            line-height: 1.8

        //- SP用 splide スライダー
        .splide
          +sp()
            width: 280px
            margin: 24px auto
        .splide__track
          +sp()
            overflow: hidden
        .splide__arrow.splide__arrow--next:disabled
          display: none !important
        .splide__pagination
          bottom: -26px
        .splide__arrow:disabled
          display: none !important
        .splide__pagination__page
          width: 6px
          height: 6px
          background #ccc
        .splide__pagination__page.is-active
          width: 6px
          height: 6px
          background grayTagColor
          transform: scale(1)
        .splide__arrow
          display: block
          position: absolute !important
          top: 50% !important
          width: 0 !important
          height: 0 !important
          background: transparent !important
          border-radius: 0 !important
          transform: translateY(-50%) !important
          content: '' !important
          &.splide__arrow--next
            right: -25px !important
            border-top: 15px solid transparent !important
            border-left: 15px solid grayTagColor !important
            border-bottom: 15px solid transparent !important
          &.splide__arrow--prev
            left: -25px !important
            border-top: 15px solid transparent !important
            border-right: 15px solid grayTagColor !important
            border-bottom: 15px solid transparent !important
          svg
            display: none

