  //- nav-menu
  .nav-menu
    position: sticky
    top: 0
    z-index: 100
    background: pinkColor
    box-sizing: border-box
    +pc()
      margin-bottom: 60px
    +sp()
      margin-bottom: 40px
    .nav-menu-inner
      display: flex
      justify-content: center
      width: 100%
      margin: 0 auto
      +pc()
        width: 1088px
      +sp()
        width: 100%
      .nav-menu-list
        position: relative
        width: 25%
        box-sizing: border-box
        color: navColor
        font-weight: bold
        line-height: 1.5
        +pc()
          height: 97px
          font-size: 1.8rem
        +sp()
          height: 62px
          font-size: 1.2rem
        &:first-of-type::before
          +pc()
            display: inline-block
            position: absolute
            top: 48px
            left: -16px
            width: 30px
            height: 1px
            transform: rotate(90deg)
            background-color: navColor
            border-right: 1px solid navColor
            content: ''
        &:not(:last-child)::after
          display: inline-block
          position: absolute
          width: 30px
          height: 1px
          transform: rotate(90deg)
          background-color: navColor
          border-right: 1px solid navColor
          content: ''
          +pc()
            top: 48px
            right: -16px
          +sp()
            top: 31px
            right: -16px
        &:last-of-type::after
          +pc()
            display: inline-block
            position: absolute
            width: 30px
            height: 1px
            transform: rotate(90deg)
            background-color: navColor
            border-right: 1px solid navColor
            content: ''
            +pc()
              top: 48px
              right: -16px
            +sp()
              top: 31px
              right: -19px
        .nav-menu-button
          display: flex
          justify-content: center
          position: relative
          width: 100%
          height: 100%
          box-sizing: border-box
          text-align: center
          line-height: 1.5
          +pc()
            align-items: center
            padding: 12px 0
          +sp()
            align-items: center
            padding: 8px 0
          &::before
            content: ""
            position: absolute
            left: 50%
            border-top: solid 1px navColor
            border-right: solid 1px navColor
            transform: translateX(-50%) rotate(135deg)
            +pc()
              bottom: 15px
              width: 10px
              height: 10px
            +sp()
              bottom: 12px
              width: 8px
              height: 8px
          &:hover,
          &:hover::before
            +pc()
              cursor: pointer
              opacity: .8
          .nav-menu-text
            display: block
            flex-grow: 0
            color: navColor
            font-weight: bold
            line-height: 1.4
            +pc()
              padding: 0 0 16px
              font-size: 1.8rem
            +sp()
              margin: 0 2px
              padding: 0 0 12px
              font-size: 1.2rem
              line-height: 1.1
  .mainInfo__wrap
    +pc()
      margin: 20px auto 70px
    +sp()
      width: calc(100% - 32px)
      margin: 16px auto 40px
    .mainInfo
