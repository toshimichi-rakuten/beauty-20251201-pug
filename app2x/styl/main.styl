            line-height: 1.8

  // アプリをダウンロード
  .downloadapp
    +pc()
      padding-bottom: 60px
    +sp()
      padding-bottom: 40px
    .downloadapp__container
      display: flex
      justify-content: center
      border-radius: 16px
