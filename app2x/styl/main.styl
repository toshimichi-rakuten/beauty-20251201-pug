          justify-content: center
          margin: 16px auto 0
          background: mobileColor
          border-radius: 44px
          box-sizing: border-box
          color: whiteColor
          font-weight: bold
          +pc()
            width: 600px
            padding: 26px
            font-size: 2.8rem
            line-height: 1.3
          +sp()
            width: 100%
            padding: 10px
            font-size: 1.6rem
            line-height: 1.4
        .entryBox__article--summary
          display: inline-block
          position: relative
          font-weight: bold
          line-height: 1.4
          +pc()
            font-size: 2rem
          +sp()
            font-size: 1.6rem
          &::before
            content: "|"
            position: absolute
            font-weight: normal
            transform: rotate(-45deg)
            +pc()
              top: 0
              left: -2.25rem
            +sp()
              top: 22px
              left: -1.75rem
          &::after
            content: "|"
            position: absolute
            font-weight: normal
            transform: rotate(45deg)
            +pc()
              top: 0
