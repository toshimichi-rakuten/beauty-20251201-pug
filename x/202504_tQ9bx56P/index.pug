extends ../../../../../_common/pug/Base/_layout.pug

block init
  -
    var parameter = '?v20250508'
    var meta = {
      title: 'Xフォロー＆リポストで5,000ポイント抽選キャンペーン',
      description: '楽天ビューティのXフォロー＆引用リポストありがとうございました！厳正なる抽選の結果、見事5,000ポイント当選しました！',
      url: 'https://beauty.rakuten.co.jp/cnt/topics/campaign/x/202504_tQ9bx56P',
      directory: '202504_tQ9bx56P', //- ディレクトリ名 for Click or Appear Tag（例：/xxxx/→'xxxx'）
      og_image: 'https://beauty.rakuten.co.jp/cnt/topics/campaign/x/202504_tQ9bx56P/img/share.png' + parameter,//- default (シェア画像があれば変更)
    }
    var css = 'css/main.css' + parameter

block addHead
  //- nofollowが必要なときはコメントを外す
  meta(name='robots', content='noindex,nofollow')

block nav
  //- grobalNav / ''に入れた部分がcurrent表示になる
  +grobalNav('/cnt/topics/')

  //- breadcrumb
  -
    var lists = [
      {
        name: 'キャンペーン一覧・特集',
        link: 'https://beauty.rakuten.co.jp/cnt/topics/',
      },
      {
        name: meta.title, //- タイトル以外を設定したいときは変更
        link: 'current', //- 'current' is no link
      },
    ]
  +breadcrumb(lists)

block content
  //- #Pagename はページ固有の名前に置換してください
  #X

    //- 終了対応
    //- #End
      - var endflag
      - var endTxt = 'このキャンペーンは終了しました' //- ページ上部の文言
      - var btnTxt = 'エントリー期間が終了しました' //- ボタンの文言
      +endSet(endTxt)

    //- Campaign Tag
    //- Rule: https://confluence.rakuten-it.com/confluence/pages/viewpage.action?pageId=2688949406
    #CpnTags
      -
        var taglist = {
          tag: [
            'エントリー必要', //- エントリー不要は自動的に青色になります
            //- '初回利用限定', //- 初回限定と全員、両方のクーポンがある場合はタグはなし
            //- '条件達成',
            //- 'ネット予約・施術完了',
            //- '毎月開催',
          ],
        }
      +campaignTag(taglist)

    //- ID、class名は自由
    section#Main.main(data-ratid='cpn_' + meta.directory + '_Main' data-ratevent='appear' data-ratparam='all')
      //- Use h1
      h1.main__title
        img.main__titleImg.-pc(src='img/main.png' + parameter, alt=meta.title)
        img.main__titleImg.-sp(src='img/main.png' + parameter, alt=meta.title)
      .main__terms
        .main__termsBox
          p.main__termsTxt.-bold
            | 当選者エントリー期間：
            br
            | 当選通知のDM受け取り 〜 5月19日 9:59
          p.main__termsTxt.-small
            | ※進呈するポイント（期間限定ポイント）には条件があります。
          p.main__termsTxt.-small
            | ※キャンペーン詳細は
            a.main__termsLink(href='#Detail')
              | こちら

    //- complete
    section#Complete.completeContent(data-ratid='cpn_' + meta.directory + '_Complete' data-ratevent='appear' data-ratparam='all')
      h2.completeContent--title
        img(src='img/img_title_complete.png' + parameter, alt='5,000ポイント当選おめでとうございます！' width='100%' height='auto')
      p.completeContent--lead
        | Xフォロー＆リポスト
        br.-sp
        | ありがとうございました！
      p.completeContent--lead.-info
        | ポイント受け取りのためDM内にて
        br.-sp
        | 指定されている
        span.text-underline
          | リポストURL
        | を
        br
        | 下記に入力のうえ送信ください。

    //- Entry
    section#Entry.stepContent(data-ratid='cpn_' + meta.directory + '_Entry' data-ratevent='appear' data-ratparam='all')
      form.stepContent__form__wrap(action='https://form.rakuten.co.jp/ans/apply/41856', name='enenForm', method='POST', onsubmit='return checkForm()')
        table.stepContent__form(border='1')
          tbody
            tr
            td
              input.stepContent--input(type='text', name='answers[41856_283761]')
              input(type='hidden', name='c', value='楽天')
              input(type='hidden', name='l', value='ja')
              br
              input.stepContent--button(type='submit',value='送信')
      p.stepContent--info
        | ※5月19日 9:59までにご回答いただけなかった場合は、
        br
        | 当選を無効とさせていただきます。


    //- Campaign Detail
    section#Detail.detail(data-ratid='cpn_' + meta.directory + '_Detail' data-ratevent='appear' data-ratparam='all')
      .detailBox
        .titleWrap
          h2.titleWrap--title キャンペーン詳細
        p.detail__caption ※本キャンペーンは予告なく変更・中止される可能性がございます。
        table.detail__table
          tbody
            tr.detail__tableBlock
              th.detail__tableBlockHead キャンペーン期間
              td.detail__tableBlockBody 2025年4月16日(水)10:00～2025年4月30日(水)9:59まで
            tr.detail__tableBlock
              th.detail__tableBlockHead 対象者
              td.detail__tableBlockBody
                p.detail__tableBlockTxt 下記の対象条件を全て満たした方が、特典の対象となります。
                p.detail__tableBlockTxt--space
                p.detail__tableBlockTxt ＜対象条件＞
                ul.detail__tableBlockList--disc
                  li.detail__tableBlockList--li 楽天ビューティのXアカウントをフォローされた方
                    br
                    | Xアカウントは
                    a.detail__tableBlockTxt--link(href="https://x.com/Rakuten__BEAUTY" target="_blank")
                      | こちら
                  li.detail__tableBlockList--li 4月16日(水)の楽天ビューティ公式アカウントの投稿に対して、下記いずれかの条件を達成された方
                    br
                    | （達成された条件によって当選確率が変動します）
                    br
                    | A） 当選確率1倍
                    br
                    span.detail__tableBlockList--indent リポスト
                    br
                    | B） 当選確率2倍
                    br
                    span.detail__tableBlockList--indent
                      | 「#楽天ビューティ」のハッシュタグと好きなのは暗髪とハイトーンカラーのどちらなのかを記載して引用リポスト
                      br
                      | 例）
                      br
                      | ハイトーンカラーでピンクベージュなどベージュ系カラーが好き！
                      br
                      | #楽天ビューティ
                p.detail__tableBlockTxt--space
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li 応募期間以前から
                    a.detail__tableBlockTxt--link(href="https://x.com/Rakuten__BEAUTY" target="_blank")
                      | 楽天ビューティの公式アカウント「@Rakuten__BEAUTY」
                    | をフォローいただいている方も、その他条件を満たせば応募可能です。
                  li.detail__tableBlockList--li 対象となるリポストはお1人様1つまでとなります。複数回リポストいただいても当選確率は上がりませんのでご了承ください。
                  li.detail__tableBlockList--li 4月16日(水)の本キャンペーンに関する投稿のリポストのみが対象となります。その他投稿をリポストされても対象外となりますので、ご注意ください。
                  li.detail__tableBlockList--li ご自身のアカウントを非公開設定にしている場合は対象外となります。
                  li.detail__tableBlockList--li 楽天グループの役職員及び関係者は応募できません。
            tr.detail__tableBlock
              th.detail__tableBlockHead 特典内容 
              td.detail__tableBlockBody
                p.detail__tableBlockTxt 抽選で10名様に楽天ポイント5,000ポイントが進呈されます。
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li 現在実施中のキャンペーンとの併用が可能です(一部併用が出来ないキャンペーンもございます)。
                    a.detail__tableBlockTxt--link(href="https://beauty.rakuten.co.jp/cnt/topics/")
                      | キャンペーン一覧はこちら
            tr.detail__tableBlock
              th.detail__tableBlockHead ポイント進呈予定日
              td.detail__tableBlockBody
                ul.detail__tableBlockList--none
                  li.detail__tableBlockList--li 2025年5月末頃
                    br
                    | 当選者の方には2025年5月中旬頃に、Xのダイレクトメッセージにて「@Rakuten__BEAUTY」より当選通知とその後のご案内をさせていただきます。
                    br
                    | ダイレクトメッセージを受け取れる設定をされていない場合や、メッセージをお送りしてから一週間以内にご返信をいただけなかった場合は、当選を無効とさせていただきますのでご了承ください。
                p.detail__tableBlockTxt--space
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li ポイントの進呈には、楽天IDが必要になります。まだお持ちでない方は
                    a.detail__tableBlockTxt--link(href="https://www.rakuten.co.jp/myrakuten/help/")
                      | こちらから楽天会員登録
                    | (無料)をお願いいたします。
                  li.detail__tableBlockList--li 獲得した特典ポイントは、
                    a.detail__tableBlockTxt--link(href='https://point.rakuten.co.jp/history/')
                      | 楽天PointClubのポイント実績
                    | でご確認いただけます。 
                  li.detail__tableBlockList--li 当選発表は当選者の方のみにご連絡いたします。当選に関わる個別のお問い合わせについては、対応しておりません。
            tr.detail__tableBlock
              th.detail__tableBlockHead ポイント有効期限
              td.detail__tableBlockBody
                p.detail__tableBlockTxt ポイント進呈日から6ヶ月間有効な期間限定ポイントとして進呈されます。
                  br
                  | 期間限定ポイントの詳細は
                  a.detail__tableBlockTxt--link(href='https://ichiba.faq.rakuten.net/detail/000006532?scid=su_2312')
                    | こちら
                  | をご確認ください。
            tr.detail__tableBlock
              th.detail__tableBlockHead 注意事項
              td.detail__tableBlockBody
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li 抽選時に楽天ビューティのアカウントのフォロー及び該当投稿のリポストが確認できない場合には対象外となります。
                  li.detail__tableBlockList--li 本キャンペーンのためにアカウントを開設し、応募したと当社が合理的に判断した場合、当選権利を無効とさせていただく場合がございます。
                  li.detail__tableBlockList--li Xの利用規約・法令に違反する行為は当選を無効とさせていただきます。
                  li.detail__tableBlockList--li 本サービスへのアクセス集中や通信回線の状態による遅延、またシステム等の不具合などにより本サービスへのアクセスや登録・表示などができないことにより発生した障害、または起因して発生したすべての事象につきましては、楽天グループ株式会社の責めに帰すべき場合を除き責任を負いかねます。
                  li.detail__tableBlockList--li 本キャンペーン参加にかかる費用(通信費等含む)は、ユーザ様のご負担となりますので、あらかじめご了承ください。
                  li.detail__tableBlockList--li 取得したユーザ情報は
                    a.detail__tableBlockTxt--link(href='https://privacy.rakuten.co.jp/')
                      | 個人情報保護方針
                    | に基づいてお取り扱いいたします。
                  li.detail__tableBlockList--li 弊社が不正と合理的に判断した場合は、特典対象から除外する場合がございます。
                  li.detail__tableBlockList--li キャンペーンの条件達成状況及び抽選に関わるお問い合わせは一切お受けいたしかねますので、ご了承ください。
                  li.detail__tableBlockList--li 「QRコード」は、株式会社デンソーウェーブの登録商標です。
                  li.detail__tableBlockList--li その他ご不明な点は
                    a.detail__tableBlockTxt--link(href='https://beauty.faq.rakuten.net/user/s/')
                      | こちら
                    | よりお問い合わせください。
                  li.detail__tableBlockList--li 本キャンペーンは楽天グループ株式会社「楽天ビューティ」が主催しているものであり、Apple Inc., Apple Japan 合同会社によるものではありません。



