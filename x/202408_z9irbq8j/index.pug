extends ../../../../../_common/pug/Base/_layout.pug

block init
  -
    var parameter = '?v20240807'
    var meta = {
      title: '楽天ビューティのXフォロー＆リポストで3名様にラブクロムのヘアコームが当たる！',
      description: '楽天ビューティのXフォロー＆リポストで3名様にラブクロムのヘアコームが当たる！ 引用リポストなら当選確率UP！',
      url: 'https://beauty.rakuten.co.jp/cnt/topics/campaign/x/202408_z9irbq8j/',
      directory: '202408_z9irbq8j', //- ディレクトリ名 for Click or Appear Tag（例：/xxxx/→'xxxx'）
      og_image: 'https://beauty.rakuten.co.jp/cnt/topics/campaign/x/202408_z9irbq8j/img/share.png' + parameter,//- default (シェア画像があれば変更)
    }
    var css = 'css/main.css' + parameter

block addHead
  //- nofollowが必要なときはコメントを外す
  meta(name='robots', content='noindex,nofollow')

block nav
  //- grobalNav / ''に入れた部分がcurrent表示になる
  +grobalNav('/cnt/topics/')

  //- breadcrumb
  -
    var lists = [
      {
        name: 'キャンペーン一覧・特集',
        link: 'https://beauty.rakuten.co.jp/cnt/topics/',
      },
      {
        name: meta.title, //- タイトル以外を設定したいときは変更
        link: 'current', //- 'current' is no link
      },
    ]
  +breadcrumb(lists)

block content
  //- #Pagename はページ固有の名前に置換してください
  #X

    //- 終了対応
    //- #End
      - var endflag
      - var endTxt = 'このキャンペーンは終了しました' //- ページ上部の文言
      - var btnTxt = 'エントリー期間が終了しました' //- ボタンの文言
      +endSet(endTxt)

    //- Campaign Tag
    //- Rule: https://confluence.rakuten-it.com/confluence/pages/viewpage.action?pageId=2688949406
    #CpnTags
      -
        var taglist = {
          tag: [
            'エントリー必要', //- エントリー不要は自動的に青色になります
            //- '初回利用限定', //- 初回限定と全員、両方のクーポンがある場合はタグはなし
            //- '条件達成',
            //- 'ネット予約・施術完了',
            //- '毎月開催',
          ],
        }
      +campaignTag(taglist)

    //- ID、class名は自由
    section#Main.main(data-ratid='cpn_' + meta.directory + '_Main' data-ratevent='appear' data-ratparam='all')
      //- Use h1
      h1.main__title
        img.main__titleImg.-pc(src='img/main.png' + parameter, alt=meta.title)
        img.main__titleImg.-sp(src='img/main_sp.png' + parameter, alt=meta.title)
      .main__terms
        .main__termsBox
          p.main__termsTxt.-bold
            | 当選者エントリー期間：
            br.-sp
            | 当選通知のDM受け取り 〜 9月5日 9:59
          p.main__termsTxt.-small
            | キャンペーン詳細は
            a.main__termsLink(href='#Detail')
              | こちら

    //- Step1
    section#Step1.stepContent(data-ratid='cpn_' + meta.directory + '_Step1' data-ratevent='appear' data-ratparam='all')
      h2.stepContent--title
        img(src='img/img_title_complete.png' + parameter, alt='Step1' width='100%' height='auto')
      p.stepContent--lead
        | Xフォロー＆リポスト
        br.-sp
        | ありがとうございました！
        br
        | 特典受け取りのため
        br.-sp
        | 下記より欲しい商品番号の回答を
        br.-sp
        | お願いします。

    //- Entry Btn
    section#EntryBox.entryBox(data-ratid='cpn_' + meta.directory + '_EntryBox' data-ratevent='appear' data-ratparam='all')
      .entryBox__wrap
        h2.entryForm--title
          | 【楽天ビューティ】
          br
          | Xフォロー＆リポストキャンペーン
          br.-sp
          | 当選者 回答フォーム
        form.entryForm(action='https://form.rakuten.co.jp/ans/apply/41056' name='enenForm' method='POST' onsubmit='return checkForm()')
          table.entryForm__wrap(border='1')
            tbody
              tr.entryForm__item
                td.entryForm__item--title
                  | 1.ラブクロムの3つのヘアコームのうち、
                  br
                  | 最も欲しいものを選択してください
                  br.-sp
                  | 【必須】
                td.entryForm__item__list
                  label.entryForm__item__list__label(for='a774087')
                    input#a774087.entryForm__item__list__icon(type='radio' name='answers[41056_278710]' value='774087')
                    img.entryForm__item__list__img(src='img/img_form_item1.png' + parameter, alt='K24GP TSUKI Gold' width='100%' height='auto')
                    | K24GP TSUKI Gold
                  label.entryForm__item__list__label(for='a774088')
                    input#a774088.entryForm__item__list__icon(type='radio' name='answers[41056_278710]' value='774088')
                    img.entryForm__item__list__img(src='img/img_form_item2.png' + parameter, alt='INBATH SCALP-GUASHA Premium Black' width='100%' height='auto')
                    | INBATH SCALP-GUASHA Premium Black
                  label.entryForm__item__list__label(for='a774089')
                    input#a774089.entryForm__item__list__icon(type='radio' name='answers[41056_278710]' value='774089')
                    img.entryForm__item__list__img(src='img/img_form_item3.png' + parameter, alt='F TETSUKI Silver' width='100%' height='auto')
                    | F TETSUKI Silver
              tr.entryForm__item
                td.entryForm__item--title
                  | 2.ラブクロムの3つのヘアコームのうち、
                  br
                  | 2番目に欲しいものを選択してください
                  br.-sp
                  | 【必須】
                td.entryForm__item__list
                  label.entryForm__item__list__label(for='a774090')
                    input#a774090.entryForm__item__list__icon(type='radio' name='answers[41056_278711]' value='774090')
                    img.entryForm__item__list__img(src='img/img_form_item1.png' + parameter, alt='K24GP TSUKI Gold' width='100%' height='auto')
                    | K24GP TSUKI Gold
                  label.entryForm__item__list__label(for='a774091')
                    input#a774091.entryForm__item__list__icon(type='radio' name='answers[41056_278711]' value='774091')
                    img.entryForm__item__list__img(src='img/img_form_item2.png' + parameter, alt='INBATH SCALP-GUASHA Premium Black' width='100%' height='auto')
                    | INBATH SCALP-GUASHA Premium Black
                  label.entryForm__item__list__label(for='a774092')
                    input#a774092.entryForm__item__list__icon(type='radio' name='answers[41056_278711]' value='774092')
                    img.entryForm__item__list__img(src='img/img_form_item3.png' + parameter, alt='F TETSUKI Silver' width='100%' height='auto')
                    | F TETSUKI Silver
          input(type='hidden' name='c' value='楽天')
          input(type='hidden' name='l' value='ja')
          input.entryForm__button(type='submit' value='回答を送信する')


      ul.entryBox--info
        li ※9月5日 9:59までにご回答いただけなかった場合は、当選は無効とさせていただきます。
        li ※ご回答はお一人様1回限りとなります。
        li ※当選順位が上位の方から順にご希望に沿った商品をお送りします。必ずしもご希望通りの商品になるとは限りません。

    //- Campaign Detail
    section#Detail.detail(data-ratid='cpn_' + meta.directory + '_Detail' data-ratevent='appear' data-ratparam='all')
      .detailBox
        .titleWrap
          h2.titleWrap--title キャンペーン詳細
        p.detail__caption ※本キャンペーンは予告なく変更・中止される可能性がございます。
        table.detail__table
          tbody
            tr.detail__tableBlock
              th.detail__tableBlockHead キャンペーン期間
              td.detail__tableBlockBody 2024年8月7日(水)10:00 ～ 2024年8月21日(水)9:59まで
            tr.detail__tableBlock
              th.detail__tableBlockHead 対象者
              td.detail__tableBlockBody
                p.detail__tableBlockTxt 下記の対象条件を全て満たした方が、特典の対象となります。
                p.detail__tableBlockTxt--space
                p.detail__tableBlockTxt ＜対象条件＞
                ul.detail__tableBlockList--disc
                  li.detail__tableBlockList--li 楽天ビューティのXアカウントをフォローされた方
                    br
                    | Xアカウントは
                    a.detail__tableBlockTxt--link(href="https://twitter.com/Rakuten__BEAUTY" target="_blank")
                      | こちら
                  li.detail__tableBlockList--li 8月7日(水)の楽天ビューティ公式アカウントの投稿に対して、下記いずれかの条件を達成された方
                    br
                    | （達成された条件によって当選確率が変動します）
                    br
                    | A） 当選確率1倍
                    br
                    span.detail__tableBlockList--indent リポスト
                    br
                    | B） 当選確率2倍
                    br
                    span.detail__tableBlockList--indent
                      | 今夏のヘアスタイルの予定または過去の思い出の夏ヘアエピソード
                      br
                      | 「#楽天ビューティ」「#夏ヘア」のハッシュタグ
                      br
                      | を添えて引用リポスト
                      br
                      | 例）海で映えそうなホワイトブロンド×ブルーのアンブレラカラーにする予定！
                      br
                      | #楽天ビューティ #夏ヘア
                p.detail__tableBlockTxt--space
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li 応募期間以前から
                    a.detail__tableBlockTxt--link(href="https://twitter.com/Rakuten__BEAUTY" target="_blank")
                      | 楽天ビューティの公式アカウント「@Rakuten__BEAUTY」
                    | をフォローいただいている方も、その他条件を満たせば応募可能です。
                  li.detail__tableBlockList--li 対象となるリポストはお1人様1つまでとなります。複数回リポストいただいても当選確率は上がりませんのでご了承ください。
                  li.detail__tableBlockList--li 8月7日(水)の本キャンペーンに関する投稿のリポストのみが対象となります。その他投稿をリポストされても対象外となりますので、ご注意ください。
                  li.detail__tableBlockList--li ご自身のアカウントを非公開設定にしている場合は対象外となります。
                  li.detail__tableBlockList--li 楽天グループの役職員及び関係者は応募できません。
            tr.detail__tableBlock
              th.detail__tableBlockHead 特典内容 
              td.detail__tableBlockBody
                p.detail__tableBlockTxt 抽選で3名様にラブクロムの下記ヘアコームのいずれかが進呈されます。
                ul.detail__tableBlockList--disc.-indent
                  li.detail__tableBlockList--li K24GP TSUKI Gold（1名様）
                  li.detail__tableBlockList--li INBATH SCALP-GUASHA Premium Black（1名様）
                  li.detail__tableBlockList--li F TETSUKI Silver（1名様）
                p.detail__tableBlockTxt--space
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li 特典はお選びいただけません。
                  li.detail__tableBlockList--li 特典は楽天会員情報にご登録の住所宛てに発送いたします。ご登録の情報に誤りや変更がないか、必ずご確認ください。楽天会員情報の確認・変更は
                    a.detail__tableBlockTxt--link(href='https://my.rakuten.co.jp/')
                      | こちら
                    | 。
                  li.detail__tableBlockList--li 配送先は、日本国内に限らせていただきます。
                  li.detail__tableBlockList--li 楽天会員情報の登録不備や宛先不明などで連絡がとれない場合、当選は無効とさせていただき、特典の再送及び繰り上げ当選は行いませんので、ご注意ください。
