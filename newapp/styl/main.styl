  // - aboutRB
  .aboutRB
    +pc()
      margin-bottom: 60px
    +sp()
      margin-bottom: 40px
    .aboutRB__box
      box-sizing: border-box
      border: 3px solid #f7f7f7 
      text-align: center
      position: relative
      +pc()
        width: 950px
        margin: 40px auto 0
        border-radius: 14px
      +sp()
        width: calc(100% - 32px)
        margin: 24px auto 0
        border-radius: 8px
      .aboutRB__meritHeader
        position: absolute
        top: 0
        left: 0
        width: 100%
        padding: 12px 16px
        background-color: #f7f7f7
        color: #333
        font-size: 1.8rem
        font-weight: bold
        padding: 8px 16px
        text-align: center
        box-sizing: border-box
        border-top-left-radius: 14px 
        border-top-right-radius: 14px
        +sp()
          font-size: 1.4rem
          padding: 6px 12px
          border-top-left-radius: 8px 
          border-top-right-radius: 8px
      .aboutRB__contents
        box-sizing: border-box
        +pc()
          padding: 60px 0 40px
        +sp()
          padding: 24px 16px
          margin-top: 44px //追加 
        .aboutRB__subtitles
          display: flex
          justify-content: center
          align-items: center
          +pc()
            margin-bottom: 32px
          +sp()
            margin-bottom: 24px
          .aboutRB__subtitleIcon
            +pc()
              width: auto
              margin-right: 24px
            +sp()
              width: auto
              margin-right: 16px
          .aboutRB__subtitleTxts
            .aboutRB__subtitle
              font-weight: bold
              text-align: center
              line-height: 1.4
              +pc()
                margin-bottom: 8px
                font-size: 2.4rem
              +sp()
                font-size: 1.8rem
            .aboutRB__caption
              text-align: center
              line-height: 1.4
              +pc()
                font-size: 1.8rem
              +sp()
                font-size: 1.4rem
        .aboutRB__attention
          text-align: center
          line-height: 1.4
          +pc()
            font-size: 1.4rem
          +sp()
            font-size: 1.2rem
          &_app
            +pc()
              font-size: 1.4rem
              margin-top:40px
            +sp()
              font-size: 1.2rem
              margin-top:16px

        .aboutRB__link
          color: secondColor
          text-decoration: underline
          &:hover
            text-decoration: none
        .aboutRB__pictBox
          display: flex
          justify-content: center
          align-items: center
          +pc()
            margin-bottom: 32px
          +sp()
            flex-wrap: wrap
            margin-bottom: 24px
          .aboutRB__img
            +pc()
              width: 110px
              margin-right: 16px
              &:last-of-type
                margin-right: 0
            +sp()
              width: 30.3%
              height: auto
              margin-right: 8px
              &:nth-of-type(-n+3)
                margin-bottom: 8px
              &:nth-of-type(3),
              &:nth-of-type(5)
                margin-right: 0
        .aboutRB__bottom
          .aboutRB__txt
            text-align: center
            +pc()
              font-size: 1.6rem
              line-height: 1.8
            +sp()
              font-size: 1.4rem
              line-height: 1.6
              margin-bottom: 8px
              &:last-of-type
                margin-bottom: 0
            .aboutRB__txt.-bold
              font-weight: bold
          // ボタンセット(bgColor,txtColor)
          btnSet(redColor, #fff)
        .aboutRB__dealBox
          +pc()
            width: 600px
            margin: 0 auto 32px
          +sp()
            width: 100%
            margin: 0 auto 24px
        .aboutRB__picts
          +pc()
            margin-bottom: 32px
          +sp()
            margin-bottom: 24px
        .aboutRB__banner
          +pc()
            margin-bottom: 32px
          +sp()
            margin-bottom: 24px          
          .aboutRB__img
            +sp()
              width: 100%
              height: auto

        .aboutRB__dl
          display: flex
          justify-content: center
          +sp()
            flex-direction: column
          .aboutRB__dlPicbox
            +pc()
              width: 286px
              margin-right: 40px
            .aboutRB__dlPic
              +sp()
                margin-bottom: 16px
          .aboutRB__dlbtnbox
            +pc()
              display: flex
              justify-content: center
              flex-direction: column
            .aboutRB__dlTitle
              +pc()
                position: relative
                display: inline-block
                margin-bottom: 16px
                text-align: center
                font-size: 2rem
                font-weight: bold
                line-height: 1.4
                &::before
                  content: "|"
                  position: absolute
                  top: 0
                  left: -2rem
                  font-weight: normal
                  transform: rotate(-45deg)
                &::after
                  content: "|"
                  position: absolute
                  top: 0
                  right: -2rem
                  font-weight: normal
                  transform: rotate(45deg)
            .aboutRB__link
              +sp()
                display: block
                margin: 0 auto
                max-width: 200px
                .aboutRB__img
                  width: 100%
            .aboutRB__article__app__qr
              +pc()
                display: block
                width: 160px
                margin: 0 auto 16px
      .aboutRB__group
        .aboutRB__bottom
          .aboutRB__txt 
            margin-bottom: 10px
            font-weight: bold                
      +sp()
        .aboutRB__point, .aboutRB__app
          .aboutRB__subtitleIcon
            .aboutRB__img
              width 50px
              height: auto
        .aboutRB__deal
          .aboutRB__subtitleIcon
            .aboutRB__img
              width 84px
              height: auto


    // app DL parts(bgColor)
    // 目立たせたい時は #FFE8E8 など推奨
    appDL(#FFE8E8)

