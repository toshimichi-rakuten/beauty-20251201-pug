passStr = '../../../../../'
@import passStr + '_common/stylus/Base/_init'

//------------------------------// Common - このページで使う共通設定。自由に設定可能

mainColor = #cc5777
mainColorSub = #f3abbf
secondColor = #45a9bc
secondColorSub = #98ccd6
grayBgColor = #f7f7f7
grayTxtColor = #333333
grayTagColor = #828282
grayLineColor = #d1d1d1
tabBorderToday = #F9E0E7
tabBorderTomorrow = #C2DCE1

pcWidth = 1216px

//------------------------------
//- Search Area Component / ()内に色を入れる
@import passStr + '_common/stylus/Module/Common/_searchArea'
searchArea(mainColor)

.titleWrap--title
  text-align: left

#TodayTomorrow

  // mainvisual
  #MainVisual
    +pc()
      background url(../img/mv_bg_pc.png) no-repeat center
      background-size cover
      text-align center
      padding 20px 0
    +sp()
      img
       width 100%

  // Content
  #TodayTomorrowContent
    .description
      +pc()
        font-size 1.4rem
        padding 40px
        line-height 1.7
        text-align center
      +sp()
        font-size 1.2rem
        padding 20px 0
        line-height 1.5
        width: 94%
        max-width: 600px
        margin: 0 auto
    #TodayTomorrowContent--wrapper
      text-align: center
      font-size: 0
    .tab_item
      width: 47%
      max-width: 270px
      text-align: center
      display: inline-block
      color: #474747
      background: #F0F0F0
      .date_icon
        background #fff
        color #474747
        position relative
        width 38px
        height: 38px
        padding: 8px 8px 13px 5px
        margin-left: 5px
        top: -7px
        z-index: 0;
        box-shadow: 2px 2px 0 #dd
        +pc()
          margin-left: 10px
          padding: 10px 10px 13px 8px
          width 55px
          height: 55px
      .date_icon:before
        content: ""
        display: block
        position: absolute
        width 100%
        height: 5px
        background: #D1D1D1
        top 0
        right: 0
      .date_icon:after
        content: ""
        display: block
        position: absolute
        width 100%
        height: 40px
        background: #FFF
        bottom -4px
        right: -4px
        z-index: -1;
        +pc()
         height: 52px
      .date_m
        font-size: 1.2rem
        vertical-align: text-top
        +pc()
          font-size: 1.6rem
      .date_d
        font-size: 1.8rem
        position: relative;
        top: 10px;
        left: 3px;
        +pc()
          font-size: 2rem
      .date_d:before
        content: "";
        width: 18px;
        height: 18px;
        border-left: 1px solid #474747;
        transform: rotate(30deg);
        position: absolute;
        top: 3px;
        left: -3px;
        +pc()
          top: 0px;
          width: 22px;
          height: 22px;

    input[name=tab_date]
      display: none
    .tab_item:hover
      cursor: pointer
      opacity 0.75
    #tabToday
      border-top-left-radius: 50px
      border-bottom-left-radius: 50px
    #tabTomorrow
      border-top-right-radius: 50px
      border-bottom-right-radius: 50px
    +sp()
      .tab_item
        font-size: 1.8rem
        padding: 20px 0
        margin-bottom: 20px
        span
          font-size:  1.2rem
    +pc()
      .tab_item
        font-size: 3.0rem
        padding: 20px 0
        margin-bottom: 40px
        span
          font-size: 2.0rem
    #Today:checked + .tab_item
      background: mainColor
      color: #FFF
      cursor: default
    #Today:checked + .tab_item:hover
      opacity 1
    #Tomorrow:checked + .tab_item
      background: secondColor
      color: #FFF
      cursor: default
    #Tomorrow:checked + .tab_item:hover
      opacity 1

    .tab_content
      display: none
    +sp()
      #Today:checked ~ .tab_content#TodayContent
        display: block
      #Tomorrow:checked ~ .tab_content#TomorrowContent
        display: block
    +pc()
      #Today:checked ~ .tab_content#TodayContent
        display: block
      #Tomorrow:checked ~ .tab_content#TomorrowContent
        display: block
    .SearchContent
      +pc()
        max-width: 900px
        margin 0 auto 60px
        display: flex
        flex-wrap: wrap
        justify-content: space-between
      +sp()
        width: 94%
        max-width: 600px
        margin: 0 auto 40px
    #TodayTomorrowContent--wrapper #TomorrowContent .genreAreaTomorrow .feature-search__form .feature-search__buttonItem
        background: secondColor

    .genreArea:before
      +pc()
        content ""
        width 100%
        height 4px
        position absolute
        top 0
        left 0
        z-index 1
    .genreAreaToday:before
      +pc()
        background-color tabBorderToday
    .genreAreaTomorrow:before
      +pc()
        background-color tabBorderTomorrow
    .genreAreaToday
      .subGenre
        &:active
          background-color mainColorSub
    .genreAreaTomorrow
      .subGenre
        &:active
          background-color secondColorSub
    .genreArea
      background #FFF
      position relative
      .GenreTab
        text-align center
      .GenreHead
        text-align center
        position relative
      .feature-search__menu
        flex-direction: column
      .feature-search__item.is-genre
        display: none !important
      .feature-search__form .feature-search__item select
        border 1px solid grayLineColor
      .feature-search__form .feature-search__item select:focus
        outline none
      $GenreCommon
        background-color #FFF
        +pc()
          background-size 36px auto
        +sp()
          background-size 30px auto
        background-repeat: no-repeat
      #GenreHairToday.TodayGenre
        background-image: url(../img/scisor_icon_today.png)
      #GenreHairTomorrow.TomorrowGenre
        background-image: url(../img/scisor_icon_tomorrow.png)
      .GenreHair
        background-position 7% center
        @extend $GenreCommon
      #GenreRelaxToday.TodayGenre
        background-image: url(../img/relaxation_icon_today.png)
      #GenreRelaxTomorrow.TomorrowGenre
        background-image: url(../img/relaxation_icon_tomorrow.png)
      .GenreRelax
        @extend $GenreCommon
        background-position: 13% center;
      #GenreEstheToday.TodayGenre
        background-image: url(../img/esthe_icon_today.png)
      #GenreEstheTomorrow.TomorrowGenre
        background-image: url(../img/esthe_icon_tomorrow.png)
      .GenreEsthe
        background-position: 13% center;
        @extend $GenreCommon
      #GenreNailToday.TodayGenre
        background-image: url(../img/nail_icon_today.png)
      #GenreNailTomorrow.TomorrowGenre
        background-image: url(../img/nail_icon_tomorrow.png)
      .GenreNail
        background-position: 2% center;
        @extend $GenreCommon
      .genreIntro
        display: flex
        justify-content: center
        align-items: center
        p.genreIntro_txt
          text-align: left
          line-height: 1.3
      +sp()
        &:last-of-type
          .genreBox
            margin-bottom: 0
        .genreBox
          border 1px solid grayLineColor
          margin-bottom: 30px
          .genreIntro
            padding: 16px
            img.genreIntro_image
              width: 24%
              height: auto
              margin-right: 10px
            .genreIntro_txt
              font-size: 1.2rem
              line-height 1.6
        .GenreTab
          display flex
          gap 5px
          align-items flex-end
          align-content flex-end
        .TodayGenre:before
          background-color tabBorderToday
        .TomorrowGenre:before
          background-color tabBorderTomorrow
        .GenreHead:before
          content ""
          width 100%
          height 4px
          position absolute
          top 0
          left 0
        .GenreHead
          border-top 1px solid grayLineColor
          border-left 1px solid grayLineColor
          border-right 1px solid grayLineColor
          border-top-left-radius 3px
          border-top-right-radius 3px
          font-size 1.4rem
          padding 10px 5px 10px 30px
          line-height 1.3
          display block
          content ""
          width 28%
          margin-bottom -1px
          span
            font-size 1.1rem
        #GenreRelax.TodayGenre
          padding: 10px 5px 10px 25px;
        .subgenre
          background #F0F0F0
          padding 10px
          border-top-left-radius 3px
          border-top-right-radius 3px
          min-height 22px
          display flex
          align-items center
          justify-content center
          flex-grow 1
          font-size 1.1rem
          &:visited
            color #333

      +pc()
        width: 48%
        border 1px solid grayLineColor
        margin-bottom: 25px
        padding-bottom: 15px;
        &:nth-last-child(-n+2)
          margin-bottom: 0
        .GenreHead
          font-size: 2rem
          display: inline-block
          padding-left: 50px
          margin: 20px auto
          span
            font-size: 1.4rem
        .genreBox
          margin 0 20px
          .genreIntro
            margin-bottom: 16px
            img.genreIntro_image
              width: 17%
              height: auto
              margin-right: 10px
            .genreIntro_txt
              font-size: 1.4rem

        .feature-search__form
          width: auto
          display block
          .feature-search__item select,
          .feature-search__item.is-areas select,
          .feature-search__buttonItem
            width: 100%
            margin-bottom: 20px
          .feature-search__buttonItem
            padding: 2rem 0

 //- Prefecture Links
  .PrefLinks
    dl.m-regionList
      font-size: 1.4rem
      letter-spacing: .03em;
      line-height: 1;
      margin:0 auto
      display: flex
      flex-wrap: wrap;
      .m-regionList__genre
        box-sizing: border-box;
        line-height: 1.5;
        background-color: #f7f7f7;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center
      .m-regionList__pref
        display: flex
        box-sizing: border-box;
        padding: 11px 0 11px 16px;
        .c-list--divideInline
          display: flex
          flex-wrap: wrap;
          align-items: center
          padding: 11px 0 11px 16px;
          .c-list__item
            display: inline-block;
            border-right: 1px solid #d1d1d1;
            margin: 6px 14px 6px 0;
            padding-right: 14px;
    +pc()
      dl.m-regionList
        max-width: 1216px;
        .m-regionList__genre
          width: 15%;
          border-radius: 4px;
          margin-bottom: 8px;
          font-weight: bold
        .m-regionList__pref
          width 85%;
    +sp()
      dl.m-regionList
        width: 94%
        margin: 0 auto 16px
        display: block
        .m-regionList__genre
          padding: 8px
        .m-regionList__pref
          padding: 0
          .c-list--divideInline
            padding: 6px 0 6px 0;
            text-align: center
            align-items: stretch
            .c-list__item
              margin:0 0 8px 0
              padding: 6px;
              display flex
              justify-content: center
              align-items: center
              box-sizing: border-box;
              width: 25%;
              &:nth-child(4n)
                border-right: none

  // app DL
  .app
    +pc()
      margin-bottom: 60px
    +sp()
      margin-bottom: 40px

    // app DL parts(bgColor)
    // 目立たせたい時は #FFE8E8 など推奨
    appDL(#FFE8E8)


 // Other Campaign
  .campaign

    // Campaign List / ()の中にwidthを入れる。SPは何もしなくてもwidth:autoになる
    @import passStr + '_common/stylus/Module/Common/_campaignList'
    campaignList(pcWidth)


 // Breadcrumb for SP
  #SPbreadcrumb
    width: 100%
    overflow-x: scroll
    padding: 10px 5px 15px;
    margin-bottom: 10px;
    box-sizing: border-box
    ul
      white-space: nowrap
