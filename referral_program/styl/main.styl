  // 各ページでカスタム使用したい場合はclass名で上書きしてください

  // common
  // override
  .titleWrap
    +pc()
      margin-bottom: 40px
    +sp()
      margin-bottom: 24px

  // main
  .main
    .main__title
      display: block
      width:pcWidth
      margin: 0 auto
      line-height:1
      font-size:1.4rem
      text-align: center
      +sp()
        width:100%
        margin: 0 auto
      &Img
        width:100%
    .main__terms
      // display: flex
      // flex-direction: column
      // align-items: center
      text-align: center
      //
      padding: 8px 10px
      margin: 0 auto
      box-sizing: border-box
      background: grayBgColor
      +pc()
        width:pcWidth
      .main__termsBox
        width: 100% //IE対応
        margin: 0 auto
        .main__termsTxt
          line-height 1.5
          color:grayTxtColor
          +pc()
            display: block
            font-size: 1.6rem
          +sp()
            font-size: 1.2rem
          &.-small
            color:grayTxtColor
            +pc()
              display: inline-block
              font-size: 1.4rem
            +sp()
              display: inline
              font-size: 1.2rem
        .main__sendTxt
          color: secondColor
        .main__receiveTxt
          color: thirdColor
        .main__termsLink
          color: linkColor
    // 毎月開催
    .main__termsAlways
      // display: flex
      // flex-direction: column
      // align-items: center
      text-align: center
      //
      margin: 0 auto
      box-sizing: border-box
      background: grayBgColor
      +pc()
        width:pcWidth
        padding: 20px
      +sp()
        padding: 8px 10px
      .main__termsBox
        width: 100% //IE対応
        margin: 0 auto
        &:first-of-type
          display: block
          border-bottom: 1px solid secondColor
          +pc()
            width: 800px
            margin-bottom: 10px
            padding-bottom: 10px
          +sp()
            margin-bottom: 8px
            padding-bottom: 8px
        .main__termsTxt
          line-height 1.5
          color:grayTxtColor
          font-weight: bold
          margin-bottom: 0.4rem
          +pc()
            display: block
            font-size: 1.8rem
          +sp()
            font-size: 1.4rem
          &.-big
            line-height 1.3
            color: secondColor
            margin: 0
            +pc()
              font-size: 2.8rem
            +sp()
              font-size: 1.6rem
          &.-small
            color:grayTxtColor
            font-weight: normal
            margin: 0
            +pc()
              display: inline-block
              font-size: 1.4rem
            +sp()
              display: inline
              font-size: 1.2rem
        .main__termsLink
          color:secondColor
    // メニュー用ページ内リンク
    .referral__menu
      display: flex
      align-items: center
      width 100%
      gap: 2px
      .referral__menu__list
        width: 50%
        &.-send
          background: secondColor
        &.-receive
          background: thirdColor
        &.-search
          background: peonyColor
        .referral__link
          display: block
          padding: 8px 8px 20px
          text-align: center
          +pc()
            padding: 24px
          .referral__termsTxt
            position: relative
            display: inline-block
            color: #fff
            font-size: 1.4rem
            +pc()
              font-size: 2rem
            &::after
              content: '';
              position: absolute
              top: 1.5rem
              right 50%
              width: 8px;
              height: 8px;
              border-top: solid 1px #fff
              border-right: solid 1px #fff
              transform: rotate(135deg)
              +pc()
                top: 50%;
                right: -3.2rem
                width: 10px;
                height: 10px;
                margin-top: -8px
              +sp()
                margin-right: -8px

  // 項目タイトル
  .titleWrap
    &.-send
      +pc()
        border-left: 4px solid secondColor
      .titleWrap--title
        +sp()
          border-left: 6px solid secondColor
    &.-receive
      +pc()
        border-left: 4px solid thirdColor
      .titleWrap--title
        +sp()
          border-left: 6px solid thirdColor
    &.-search
      +pc()
        border-left: 4px solid peonyColor
      .titleWrap--title
        +sp()
          border-left: 6px solid peonyColor
  .flow__wrapper
    margin-top: 24px
    +pc()
      margin-top: 40px
    .flow__caption
      padding: 0 16px
      font-size: 1.4rem
      text-align: center
      font-weight:bold
      line-height: 1.4
      +pc()
        font-size: 2rem
      &.-send
        color: secondColor
      &.-normal
        color: grayTxtColor
      &.-receive
        color: thirdColor
      &.-search
        color: peonyColor
      .flow__txt
        &.-xxlarge
          font-size: 2.8rem
          line-height: 1.1
          +pc()
            font-size: 3.2rem
            line-height: 1
          +sp()
            font-weight: bold
        &.-small
          color:grayTxtColor
          font-weight: normal
          margin: 0
          +pc()
            display: inline-block
            font-size: 1.4rem
          +sp()
            display: inline
            font-size: 1.2rem



  // 紹介する方
  .flow
    width: 100%
    margin: 40px auto
    +pc()
      width: 1216px
      margin: 60px auto
    .flow__tab
        display: flex
        justify-content: space-btween
        margin-top: 24px
        +pc()
          margin-top: 40px
          gap: 10px
      .flow__tabMenuSend,
      .flow__tabMenuReceive
        position: relative
        z-index: 1
        flex: 1;
        top: 2px
        height: 60px
        padding: 20px 0
        background: grayTabColor
        border: 2px solid grayTabColor
        border-radius: 4px 4px 0px 0px
        box-sizing: border-box
        font-size: 1.2rem
        text-align: center
        font-weight: bold
        +pc()
          font-size: 1.6rem
        +sp()
          margin-right: 2px
          &:last-of-type
            margin-right: 0
        &:hover
          color: currentColor
          transition 0.2s
          cursor pointer
        &.-active
          z-index: 3
          background: #fff
          border: 2px solid grayLineColor
          border-bottom: 0
          color: secondColor
        .flow__tabImg
          display: inline-block
          position: relative
          top: -.3rem
          width: 20px
          height: auto
          margin-right: 8px
          +pc()
            width: 24px
    .flow__tabMenuReceive
      &.-active
        color: thirdColor
    .flow__tabContents
      position: relative;
      z-index: 2;
      padding: 24px 16px 0
      border-top: 2px solid grayLineColor
      +pc()
        padding: 40px 0 0
      .flow__tabContentsItemSend,
      .flow__tabContentsItemReceive
        display: none
        &.-show
          display: block
        .flow__boxWrap
          +pc()
            display: flex
            justify-content: space-between
            width: 100%
            margin: 0 auto 44px
            gap: 0 40px
          .flow__box
            display: flex
            align-items: center
            position: relative
            padding: 16px
            background: grayBgColor
            border-radius: 8px
            box-sizing: border-box
            +pc()
              flex: 1
              flex-direction: column
            +sp()
              flex-wrap: wrap
              justify-content: center
              margin: 0 auto 34px
            &::after
              +pc()
                content:''
                position: absolute
                top:calc((100% - 20px * 2) / 2)
                right: -32px
                arrowFill(right,20px,grayTagColor)
              +sp()
                content:''
                position: absolute
                left:calc((100% - 10px * 2) / 2)
                bottom: -22px
                arrowFill(bottom,10px,grayTagColor)
            &:last-of-type
              // margin-bottom: 0
              &::after
                display: none
            .flow__box0
              width: 100%
              margin-bottom: 8px
              +pc()
                margin-bottom: 16px
            .flow__box1
              +pc()
                width: 160px
                margin-bottom: 16px
              +sp()
                display: inline-block
                width: 35%
                text-align: center
                img
                  width: 80%
            &:last-of-type
              .flow__box1
                &::after
                  border:none
            .flow__box2
              position: relative
              width: 100%
              +pc()
                display: flex
                flex-direction: column
                align-items: center
                height: 100%
              +sp()
                display: inline-block
                width: calc(100% - 35% - 8px);
                margin-left: 8px
              // override
              .flow__txt
                &.-small
                  +sp()
                    color: grayTagColor
            .flow__iconBtn
              width: 100%;
              margin: 0 auto
              padding-bottom: 24px
              text-align: center
              +sp()
                max-width: 100%
                padding: 0
              .flow__boxIcon
                width: 49px
                height: 49px
              .send__boxBtn
                display: flex
                justify-content: center
                align-items: center
                height: 44px
                margin-top: 8px
                padding: 0 8px
                border-radius: 100px
                color: #fff
                text-align: center
                font-size: 16px;
                line-height: 1.5
                +pc()
                  margin-top: 16px
                &.-green
                  background: greenColor
                &.-black
                  background: blackColor
                &.-red
                  background: redColor
                &.-end
                  background: grayTagColor
              .flow__iconText
                display: inline-block
                margin-bottom: 2px
                padding-left: 8px
              .line__boxTxt
                font-size: 1.4rem
                line-height: 1.8
              .line__form
                display: flex;
                flex-direction: column;
                margin-top: 8px
                .line__formTxt
                  width: 100%
                  padding: 8px 16px
                  background: #fff
                  border: 1px solid grayLineColor
                  border-radius: 4px
                  box-sizing: border-box
                  font-size: 1.4rem
                  text-align: left
                  line-height: 1.5
                .line__formButton
                  display: flex
                  justify-content: center
                  align-items: center
                  margin-top: 8px
                  padding: 8px
                  background: greenColor
                  border: none
                  box-sizing: border-box
                  border-radius: 4px
                  color: #fff
                  text-align: center
                  line-height: 1.5
                  font-size: 1.4rem
                  cursor: pointer
                  .line__formIcon
                    width: 16px
                    height: 16px
                    margin-right: 8px
              .line__message
                display: none
                position: absolute
                top: calc((100% - 70px) / 2)
                width: 100%
                padding: 24px 16px
                background: #e8f7e1
                border-radius: 4px
                box-sizing: border-box
                text-align: left
                .line__messageTxt
                  display: flex
                  justify-content: center
                  color: #069907
                  font-size: 1.4rem
                  line-height: 1.5
                  .icon-check
                    padding-right: 8px
                    font-size: 2.4rem
          // common
          .flow__boxTitle
            text-align: center
            line-height: 1.4
            font-weight: bold
            +pc()
              font-size: 2rem
              line-height: 1.2
            +sp()
              font-size: 1.6rem
            &.-send
              color: secondColor
            &.-receive
              color: thirdColor
          .flow__txt
            color: grayTxtColor
            text-align: center
            line-height: 1.8
            font-size: 1.4rem
            +pc()
              font-weight: bold
              line-height: 1.5
            &.-xxlarge
              font-size: 2.8rem
              line-height: 1.1
              +pc()
                font-size: 3.2rem
                line-height: 1
              +sp()
                font-weight: bold
            &.-xlarge
              +pc()
                font-size: 1.6rem
                line-height: 1
              +sp()
                font-weight: bold
            &.-large
              font-size: 1.8rem
              +pc()
                font-size: 2rem
              +sp()
                font-weight: bold
            &.-small
              margin-top: 8px
              font-size: 1.2rem
              +pc()
                font-weight: normal
            &.-send
              color: secondColor
            &.-receive
              color: thirdColor
          .flow__link
            color: linkColor
            &:hover
              opacity: .8
          .flow__boxImg
            width: 100%
            height: auto
            
    .flow__panda
      position: relative
      display: flex
      align-items: center
      justify-content: center
      border-radius: 8px
      max-width: 720px 
      margin: 0 auto
      padding: 30px 0
      gap: 16px
