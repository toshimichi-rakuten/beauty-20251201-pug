//------------------------------// Common - このページで使う共通設定。自由に設定可能

mainColor = #cc5777
mainColorSub = #f3abbf
secondColor = #bfa100
secondColorSub = #98ccd6
thirdColor = #25a4d0
grayBgColor = #f7f7f7
grayTxtColor = #333333
grayTagColor = #828282
grayLineColor = #d1d1d1
grayTabColor = #f7f7f7
linkColor = #45a9bc
