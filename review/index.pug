extends ../../../../_common/pug/Base/_layout.pug

block init
  -
    var meta = {
      title: "【常時開催】ネット予約＆施術完了＆口コミ投稿・公開で50ポイントプレゼント",
      description: "【常時開催】ネット予約＆施術完了＆口コミ投稿・公開で50ポイントプレゼント",
      url: "https://beauty.rakuten.co.jp/cnt/topics/campaign/review/",
      og_image: "https://beauty.rakuten.co.jp/cnt/topics/campaign/review/images/share.png?v20221108",//- default (シェア画像があれば変更)
    }
  - var css = "css/main.css?v20250508"

block addHead
  //- nofollowが必要なときはコメントを外す
  //- meta(name='robots', content='noindex,nofollow')

block nav
  //- grobalNav / ''に入れた部分がcurrent表示になる
  +grobalNav('/cnt/topics/')

  //- breadcrumb
  -
    var lists = [
      {
        name: 'キャンペーン一覧・特集',
        link: 'https://beauty.rakuten.co.jp/cnt/topics/',
      },
      {
        name: meta.title, //- タイトル以外を設定したいときは変更
        link: 'current', //- 'current' is no link
      },
    ]
  +breadcrumb(lists)

block content
  //- #Review はページ固有の名前に置換してください
  #Review

    //- 終了対応
    //- #End
      - var endflag
      - var endTxt = 'このキャンペーンは終了しました' //- ページ上部の文言
      - var btnTxt = 'エントリー期間が終了しました' //- ボタンの文言
      +endSet(endTxt)

    //- Campaign Tag
    //- Rule: https://confluence.rakuten-it.com/confluence/pages/viewpage.action?pageId=2688949406
    #CpnTags
      -
        var taglist = {
          tag: [
            'エントリー不要', //- エントリー不要は自動的に青色になります
            '口コミ投稿・公開',
            '常時開催',
          ],
        }
      +campaignTag(taglist)

    //- ID、class名は自由
    #Main.main
      //- Use h1
      h1.main__title
        img.main__titleImg(src='img/main.png' alt=meta.title)
      .main__terms
        .main__termsBox
          p.main__termsTxt
            | ※当社が投稿内容を
            a.main__termsLink(href="https://beauty.rakuten.co.jp/cnt/terms/review/") 「口コミ」利用規約
            | に基づき公開しなかった場合、もしくは投稿者自ら削除した場合はポイント付与対象外となります。
          p.main__termsTxt.-small
            | ※本企画は予告無く変更・中止されることがございます。
          p.main__termsTxt.-small
            | ※進呈するポイント（期間限定ポイントを含む）には上限や条件があります。
          p.main__termsTxt.-small.-red
            | ※本キャンペーンは 2025年5月31日23:59までの口コミ投稿をもって終了させていただきます。
          p.main__termsTxt.-small
            | ※キャンペーン詳細は
            a.main__termsLink(href='#Detail')
              | こちら

    //- Review Btn
    #ReviewBox.reviewBox

      //- ボタンセット(url,txt,endflag)
      +btnSet('https://beauty.rakuten.co.jp/user/reservation_list.php', '来店いただいた<br class="-sp">サロンの口コミを書く')

      p.reviewTxt ※マイページにログインする必要があります。

    //- RB link
    #RbLink.rbLink
      .titleWrap
        h2.titleWrap--title まずはサロンを探してネット予約！
      ul.rbLinkWrap
        li.rbLinkBox
          a.rbLinkImgBox(href='/')
            img.rbLinkImg(src='img/rb_hair.png', alt='美容室')
        li.rbLinkBox
          a.rbLinkImgBox(href='/nail/')
            img.rbLinkImg(src='img/rb_nail.png', alt='ネイル・まつげ')
        li.rbLinkBox
          a.rbLinkImgBox(href='/esthe/')
            img.rbLinkImg(src='img/rb_esthe.png', alt='エステ')
        li.rbLinkBox
          a.rbLinkImgBox(href='/relax/')
            img.rbLinkImg(src='img/rb_relax.png', alt='リラク')

    //- ポイントゲットの流れ
    #PointFlow.pointFlow
      .titleWrap
        h2.titleWrap--title 口コミを書いてポイントゲット!
      .pointFlowWrap
        ul.pointFlowBox
          li.pointFlowImgBox
            img.pointFlowImg(src='img/step1.jpg', alt='まずはサロンにネット予約')
          li.pointFlowTxtBox
            p.pointFlowTxt
              | まずはサロンに
              br.-pc
              | ネット予約
        ul.pointFlowBox
          li.pointFlowImgBox
            img.pointFlowImg(src='img/step2.jpg', alt='施術したあと予約履歴から口コミ投稿')
          li.pointFlowTxtBox
            p.pointFlowTxt
              | 施術したあと予約履歴
              br.-pc
              | から口コミ投稿
        ul.pointFlowBox
          li.pointFlowImgBox
            img.pointFlowImg(src='img/step3.jpg', alt='公開後、ポイントGET！')
          li.pointFlowTxtBox
            p.pointFlowTxt
              | 公開後、
              br.-pc
              | ポイントGET！

    //- Review Btn
    #ReviewBox2.reviewBox

      //- ボタンセット(url,txt,endflag)
      +btnSet('https://beauty.rakuten.co.jp/user/reservation_list.php', '来店いただいた<br class="-sp">サロンの口コミを書く')

      p.reviewTxt ※マイページにログインする必要があります。

    //- Campaign Detail
    #Detail.detail
      .detailBox
        .titleWrap
          h2.titleWrap--title キャンペーン詳細
        //- h3.titleWrap--subtitle 【MAQUIA】限定クーポン
        p.detail__caption ※本キャンペーンは 2025年5月31日23:59までの口コミ投稿をもって終了させていただきます。
        table.detail__table
          tbody
            tr.detail__tableBlock
              th.detail__tableBlockHead 対象者
              td.detail__tableBlockBody
                p.detail__tableBlockTxt 下記の対象条件を全て満たした方が、特典の対象となります。
                p.detail__tableBlockTxt--space
                p.detail__tableBlockTxt--bold ＜対象条件＞ 
                ul.detail__tableBlockList--disc
                  li.detail__tableBlockList--li 楽天ビューティからネット予約を行い、施術完了後、マイページの予約履歴から口コミを投稿された方
                  li.detail__tableBlockList--li 投稿された口コミが公開された方
                p.detail__tableBlockTxt--space
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li マイページの「口コミを書く」ボタンから口コミ投稿が可能です。
                  li.detail__tableBlockList--li 1回の施術で投稿できる口コミは1回のみとなります。
                  li.detail__tableBlockList--li 電話予約の口コミ投稿は、対象外となります。
                  li.detail__tableBlockList--li 楽天ビューティの公開審査を通過し、口コミが公開された場合のみ対象となります。
                  li.detail__tableBlockList--li 対象条件は変更となる可能性がございます。
            tr.detail__tableBlock
              th.detail__tableBlockHead 特典内容
              td.detail__tableBlockBody
                p.detail__tableBlockTxt--bold 楽天ポイント50ポイントが進呈されます。
                p.detail__tableBlockTxt--space
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li 期間中に2回以上ネット予約を行い、施術完了後に各施術に対して口コミを投稿いただいた場合は、各投稿毎にポイントが進呈されます。
                  li.detail__tableBlockList--li 進呈対象のポイント数は変更となる可能性がございます。
            tr.detail__tableBlock
              th.detail__tableBlockHead ポイント進呈予定日
              td.detail__tableBlockBody 口コミ投稿日の翌月末頃
                p.detail__tableBlockTxt--space
                p.detail__tableBlockTxt 獲得した特典ポイントは、
                  a.detail__tableBlockTxt--link(href="https://point.rakuten.co.jp/history/")
                    | 楽天PointClubのポイント実績
                  | でご確認いただけます。
            tr.detail__tableBlock
              th.detail__tableBlockHead ポイント有効期限
              td.detail__tableBlockBody
                p.detail__tableBlockTxt ポイント進呈日から6ヶ月間有効な期間限定ポイントとして進呈されます。
                p.detail__tableBlockTxt 通常ポイントの有効期限については
                  a.detail__tableBlockTxt--link(href="https://ichiba.faq.rakuten.net/detail/000006609")
                    | こちら
                  | をご確認ください。
            tr.detail__tableBlock
              th.detail__tableBlockHead 注意事項
              td.detail__tableBlockBody
                ul.detail__tableBlockList
                  li.detail__tableBlockList--li 口コミの投稿可能期間は施術完了日より30日以内となります。
                  li.detail__tableBlockList--li 一部ネット予約が行えないサロンがございます。また、サロンの予約状況によっては、ご希望に添えない場合やお断りする場合もございます。
                  li.detail__tableBlockList--li 本サービスへのアクセス集中や通信回線の状態による遅延、不具合などにより本サービスへのアクセスや登録・表示などができないことにより発生した障害、または起因して発生したすべての事象に関しましては、当社の責めに帰すべき場合を除き、責任を負いかねます。
                  li.detail__tableBlockList--li 取得したユーザ情報は
                    a.detail__tableBlockTxt--link(href="https://privacy.rakuten.co.jp/")
                      | 個人情報保護方針
                    | に基づいてお取り扱いいたします。
                  li.detail__tableBlockList--li 掲載店舗、あるいは弊社が不正と合理的に判断した場合は、特典対象から除外する場合がございます。
                  li.detail__tableBlockList--li キャンペーンの条件達成状況に関わるお問い合わせは一切お受けいたしかねますので、ご了承ください。
                  li.detail__tableBlockList--li 「QRコード」は、株式会社デンソーウェーブの登録商標です。
                  li.detail__tableBlockList--li その他ご不明な点は
                    a.detail__tableBlockTxt--link(href="https://beauty.faq.rakuten.net/user/s/")
                      | こちら
                    | よりお問い合わせください。 


