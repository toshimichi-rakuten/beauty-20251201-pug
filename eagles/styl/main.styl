      justify-content: center
      width: 100%
      margin: 0 auto
      +pc()
        width: 1088px
      +sp()
        width: 100%
      .nav-menu-list
        position: relative
        width: 25%
        box-sizing: border-box
        color: navColor
        font-weight: bold
        line-height: 1.5
        +pc()
          height: 97px
          font-size: 1.8rem
        +sp()
          height: 62px
          font-size: 1.2rem
        &:first-of-type::before
          +pc()
            display: inline-block
            position: absolute
            top: 48px
            left: -16px
            width: 30px
            height: 1px
            transform: rotate(90deg)
            background-color: navColor
            border-right: 1px solid navColor
            content: ''
        &:not(:last-child)::after
          display: inline-block
          position: absolute
          width: 30px
          height: 1px
          transform: rotate(90deg)
          background-color: navColor
          border-right: 1px solid navColor
          content: ''
          +pc()
            top: 48px
            right: -16px
          +sp()
            top: 31px
            right: -16px
        &:last-of-type::after
          +pc()
            display: inline-block
            position: absolute
            width: 30px
            height: 1px
            transform: rotate(90deg)
            background-color: navColor
            border-right: 1px solid navColor
            content: ''
            +pc()
              top: 48px
              right: -16px
            +sp()
              top: 31px
              right: -19px
